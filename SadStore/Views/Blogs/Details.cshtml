@model SadStore.Data.BlogPost
@inject SadStore.Services.LanguageService Lang

@{
    var isRtl = Lang.IsRtl();
    ViewData["Title"] = isRtl ? Model.TitleAr : Model.TitleEn;
    var relatedPosts = ViewBag.RelatedPosts as List<SadStore.Data.BlogPost>;
}

<div class="product-page">
    <nav class="breadcrumb-nav py-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        @Lang.Get("Home")
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Blogs">
                        @Lang.Get("Blog")
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">@Lang.Get("Details")</li>
            </ol>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <a href="/Blogs" class="btn-back mb-4 d-inline-flex align-items-center text-decoration-none text-dark fw-bold">
                    <i class="fas @(isRtl ? "fa-arrow-right" : "fa-arrow-left") mx-2"></i> @Lang.Get("Back to Blog")
                </a>

                <div class="blog-details-header mb-4 text-center">
                    <h1 class="blog-details-title fw-bold mb-3">@(isRtl? Model.TitleAr: Model.TitleEn)</h1>
                    <div class="blog-meta text-muted">
                        <span class="date"><i class="fas fa-calendar-alt me-1"></i> @Model.PublishedDate.ToString("dd MMMM yyyy")</span>
                        <span class="mx-2">|</span>
                        <span class="author"><i class="fas fa-user me-1"></i> @Lang.Get("Saad")</span>
                    </div>
                </div>

                <div class="blog-featured-image mb-5 rounded overflow-hidden shadow-sm">
                    <img src="@Model.ImageUrl" alt="@(isRtl? Model.TitleAr: Model.TitleEn)" class="img-fluid w-100" onerror="this.src='/images/blog-default.jpg'">
                </div>

                <div class="blog-details-content lh-lg text-secondary">
                    @Html.Raw((isRtl ? Model.ContentAr : Model.ContentEn)?.Replace("\n", "<br>"))
                </div>
            </div>
        </div>
    </div>

    <section class="related-posts py-5 bg-light mt-5">
        <div class="container">
            <h3 class="text-center mb-4 fw-bold">@Lang.Get("Related Products")</h3>
            <div class="row g-4">
                @if (relatedPosts != null && relatedPosts.Any())
                {
                    foreach (var item in relatedPosts)
                    {
                        <div class="col-md-4">
                            <a href="/Blogs/Details/@item.Id" class="blog-card-link text-decoration-none">
                                <div class="blog-card border rounded overflow-hidden bg-white h-100">
                                    <div class="blog-image" style="height: 200px;">
                                        <img src="@item.ImageUrl" class="w-100 h-100 object-fit-cover" onerror="this.src='/images/blog-default.jpg'">
                                    </div>
                                    <div class="blog-content p-3">
                                        <h5 class="blog-title text-dark fw-bold" style="font-size: 1rem;">@(isRtl? item.TitleAr: item.TitleEn)</h5>
                                        <small class="text-muted">@item.PublishedDate.ToString("yyyy/MM/dd")</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-muted">@Lang.Get("No posts found")</p>
                }
            </div>
        </div>
    </section>
</div>