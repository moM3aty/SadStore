@model List<SadStore.Data.Product>
@inject SadStore.Services.LanguageService Lang

@{
    ViewData["Title"] = Lang.Get("My Profile"); // Using a close match or "Wishlist" if added
    var isRtl = Lang.IsRtl();
}

<div class="product-page">
    <nav class="breadcrumb-nav py-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <span>@Lang.Get("Home")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">@Lang.Get("My Profile")</li> <!-- Can serve as Wishlist title if key missing -->
            </ol>
        </div>
    </nav>

    <section class="wishlist py-5">
        <div class="container">
            <h3 class="page-title text-center mb-5">@Lang.Get("My Profile")</h3>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="bg-light">
                            <tr>
                                <th>#</th>
                                <th>@Lang.Get("Image")</th>
                                <th>@Lang.Get("Product Name")</th>
                                <th>@Lang.Get("Price")</th>
                                <th>@Lang.Get("Add to Cart")</th>
                                <th>@Lang.Get("Delete")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <a href="/Products/Details/@item.Id">
                                            <img src="@item.ImageUrl" class="product-img" style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px;" onerror="this.src='/images/product.webp'">
                                        </a>
                                    </td>
                                    <td class="fw-bold">
                                        <a href="/Products/Details/@item.Id" class="text-dark text-decoration-none">@(isRtl? item.NameAr: item.NameEn)</a>
                                    </td>
                                    <td class="fw-bold text-danger">@item.Price.ToString("N2") @Lang.Get("SAR")</td>
                                    <td>
                                        <form action="/Cart/Add" method="post">
                                            <input type="hidden" name="productId" value="@item.Id" />
                                            <button type="submit" class="action-btn add-cart btn btn-dark btn-sm">
                                                <i class="fas fa-cart-plus"></i> @Lang.Get("Add to Cart")
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/Wishlist/Remove" method="post">
                                            <input type="hidden" name="productId" value="@item.Id" />
                                            <button type="submit" class="remove btn btn-link text-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center">
                    <i class="far fa-heart fa-4x text-muted mb-3"></i>
                    <p class="lead">@Lang.Get("Your cart is empty")</p> <!-- Using similar logic -->
                    <a href="/Products" class="btn btn-primary">@Lang.Get("Browse Products")</a>
                </div>
            }
        </div>
    </section>
</div>