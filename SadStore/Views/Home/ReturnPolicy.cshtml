@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Return Policy");
    var isRtl = Lang.IsRtl();
}

<div class="product-page">
    <nav class="breadcrumb-nav py-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <span>@Lang.Get("Home")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">@Lang.Get("Return Policy")</li>
            </ol>
        </div>
    </nav>

    <section class="py-5 return-policy">
        <div class="container">
            <div class="row g-4 justify-content-center">
                <div class="col-lg-10">
                    <div class="content bg-white p-5 rounded-3 shadow-sm">
                        <h2 class="mb-4 fw-bold text-center">@Lang.Get("Return Policy")</h2>

                        <div class="text-center mb-5">
                            <a href="/Profile" class="btn btn-outline-dark btn-lg px-5">
                                @Lang.Get("RP_StartLink") <i class="fas @(isRtl ? "fa-arrow-left" : "fa-arrow-right") ms-2"></i>
                            </a>
                        </div>

                        <div class="alert alert-info border-0 bg-soft-primary">
                            <i class="fas fa-info-circle me-2"></i> @Lang.Get("RP_Intro")
                        </div>

                        <ul class="list-group list-group-flush mb-5">
                            <li class="list-group-item bg-transparent py-3"><i class="fas fa-check-circle text-success me-2"></i> @Lang.Get("RP_Fee")</li>
                            <li class="list-group-item bg-transparent py-3"><i class="fas fa-check-circle text-success me-2"></i> @Lang.Get("RP_Window")</li>
                            <li class="list-group-item bg-transparent py-3"><i class="fas fa-check-circle text-success me-2"></i> @Lang.Get("RP_NoStoreReturn")</li>
                            <li class="list-group-item bg-transparent py-3"><i class="fas fa-check-circle text-success me-2"></i> @Lang.Get("RP_NoExchange")</li>
                            <li class="list-group-item bg-transparent py-3"><i class="fas fa-check-circle text-success me-2"></i> @Lang.Get("RP_OriginalCondition")</li>
                            <li class="list-group-item bg-transparent py-3"><i class="fas fa-check-circle text-success me-2"></i> @Lang.Get("RP_Exception")</li>
                        </ul>

                        <div class="mb-5">
                            <h4 class="fw-bold mb-3 border-bottom pb-2">@Lang.Get("RP_PromoTitle")</h4>
                            <p class="text-muted"><i class="fas fa-star text-warning me-2"></i> @Lang.Get("RP_PromoPoint")</p>
                        </div>

                        <div class="row g-4 mb-5">
                            <h4 class="fw-bold mb-3 border-bottom pb-2 w-100">@Lang.Get("RP_StepsTitle")</h4>
                            <div class="col-md-4">
                                <div class="step-card text-center p-4 border rounded bg-light h-100">
                                    <div class="step-icon mb-3 text-primary fs-2"><i class="fas fa-user-circle"></i></div>
                                    <h6 class="fw-bold">1. @Lang.Get("RP_Step1")</h6>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="step-card text-center p-4 border rounded bg-light h-100">
                                    <div class="step-icon mb-3 text-primary fs-2"><i class="fas fa-file-alt"></i></div>
                                    <h6 class="fw-bold">2. @Lang.Get("RP_Step2")</h6>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="step-card text-center p-4 border rounded bg-light h-100">
                                    <div class="step-icon mb-3 text-primary fs-2"><i class="fas fa-envelope-open-text"></i></div>
                                    <h6 class="fw-bold">3. @Lang.Get("RP_Step3")</h6>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning border-0">
                            <h5 class="alert-heading fw-bold"><i class="fas fa-exclamation-triangle me-2"></i> @Lang.Get("RP_NotesTitle")</h5>
                            <hr>
                            <p class="mb-1">• @Lang.Get("RP_Note1")</p>
                            <p class="mb-0">• @Lang.Get("RP_Note2")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>