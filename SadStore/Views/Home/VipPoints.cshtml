@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Sad VIP Points");
    var isRtl = Lang.IsRtl();
}
<style>
    .aBtn{
        color:#000;
    }

    button:hover .aBtn {
       color: #FFF;
    }
</style>
<div class="product-page">
    <nav class="breadcrumb-nav py-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <span>@Lang.Get("Home")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">@Lang.Get("Sad VIP Points")</li>
            </ol>
        </div>
    </nav>

    <section class="vip-section">
        <div class="container">
            <div class="vip-card">
                <div class="vip-content">
                    <div class="vip-text">
                        <h2>@Lang.Get("Sad VIP Points")</h2>
                        <p>@Lang.Get("Vip_Desc1")</p>
                        <p>@Lang.Get("Vip_Desc2")</p>
                        <p>@Lang.Get("Vip_Promo")</p>
                    </div>

                    <button class="btn-receive">
                        @Lang.Get("Receive Points")
                    </button>
                </div>
                <div class="vip-icon">
                    <i class="fas fa-star"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="points-section">
        <div class="container">
            <h2 class="section-title">@Lang.Get("Ways to Earn Points")</h2>

            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="points-card">
                        <div class="points-header">
                            <div>
                                <h3>@Lang.Get("1 Point")</h3>
                                <p class="points-subtitle">@Lang.Get("Shop Now")</p>
                            </div>
                            <div class="points-icon">
                                <i class="fas fa-gift"></i>
                            </div>
                        </div>

                        <button class="btn-action">
                            <a href="/Products" class="p-0 m-0 border-0 aBtn" >

                            @Lang.Get("Order from Store")
                            </a>
                        </button>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="points-card">
                        <div class="points-header">
                            <div>
                                <h3>@Lang.Get("100 Points")</h3>
                                <p class="points-subtitle">@Lang.Get("Rate Your Order")</p>
                            </div>
                            <div class="points-icon">
                                <i class="fas fa-gift"></i>
                            </div>
                        </div>

                        <button  class="btn-action">
                            <a href="/Profile" class="p-0 m-0 border-0 aBtn">
                            @Lang.Get("Rate Order")
                            </a>
                        </button>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="points-card">
                        <div class="points-header">
                            <div>
                                <h3>@Lang.Get("25 Points")</h3>
                                <p class="points-subtitle">@Lang.Get("Invite Your Friends")</p>
                            </div>
                            <div class="points-icon">
                                <i class="fas fa-gift"></i>
                            </div>
                        </div>

                        <div class="share-link">
                            <input type="text" value="https://actan.com/..." readonly>
                            <button class="btn-copy">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="discounts-section">
        <div class="container">
            <h2 class="section-title">@Lang.Get("Discounts")</h2>

            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="discount-card">
                        <div class="discount-logo">
                            <div class="logo-text">صاد</div>
                            <div class="logo-english">SAAD</div>
                        </div>

                        <h3>@Lang.Get("100 SAR Discount Coupon")</h3>
                        <p class="discount-code">@Lang.Get("SAR100 Discount Code")</p>
                        <p class="discount-points">@Lang.Get("1000 Points")</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="discount-card">
                        <div class="discount-logo">
                            <div class="logo-text">صاد</div>
                            <div class="logo-english">SAAD</div>
                        </div>

                        <h3>@Lang.Get("150 SAR Discount Coupon")</h3>
                        <p class="discount-code">@Lang.Get("SAR150 Discount Code")</p>
                        <p class="discount-points">@Lang.Get("1500 Points")</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="discount-card">
                        <div class="discount-logo">
                            <div class="logo-text">صاد</div>
                            <div class="logo-english">SAAD</div>
                        </div>

                        <h3>@Lang.Get("50 SAR Discount Coupon")</h3>
                        <p class="discount-code">@Lang.Get("SAR50 Discount Code")</p>
                        <p class="discount-points">@Lang.Get("500 Points")</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>