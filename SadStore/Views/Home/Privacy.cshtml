@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Privacy Policy");
    var isRtl = Lang.IsRtl();
}

<div class="product-page">
    <nav class="breadcrumb-nav py-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <span>@Lang.Get("Home")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">@Lang.Get("Privacy Policy")</li>
            </ol>
        </div>
    </nav>

    <section class="py-5 return-policy">
        <div class="container">
            <div class="row g-4 justify-content-center">
                <div class="col-lg-10">
                    <div class="content bg-white p-5 rounded-3 shadow-sm">
                        <h2 class="mb-4 fw-bold text-center">@Lang.Get("Privacy Policy")</h2>

                        <p class="mb-3" style="font-size: 15px;">
                            @Lang.Get("Privacy Policy Content")
                        </p>

                        <p class="mb-3" style="font-size: 15px;">
                            @Lang.Get("Privacy Policy Detail")
                        </p>

                        <div class="alert alert-success d-flex align-items-center mt-4">
                            <i class="fas fa-shield-alt fa-2x me-3"></i>
                            <div>
                                <strong>@Lang.Get("Payment Security")</strong>
                            </div>
                        </div>

                        <p class="mt-4" style="font-size: 15px;">
                            @Lang.Get("Privacy Contact")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>