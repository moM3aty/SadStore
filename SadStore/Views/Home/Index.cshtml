@model List<SadStore.Data.Product>

<section class="hero-section mx-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-5 text-content">
                <div class="hero-text">
                    <h1 class="abayaa-text" data-ar="عبايات" data-en="Abayas">عبايات</h1>
                    <div class="collection-links">
                        <a href="/Products?category=casual" class="casual-text" data-ar="كاجوال" data-en="Casual">كاجوال</a>
                        <a href="/Products?category=evening" class="sahra-text" data-ar="سهرة" data-en="Evening">سهرة</a>
                        <a href="/Products?category=umrah" class="omra-text" data-ar="عمرة" data-en="Umrah">عمرة</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="fabrics-section mx-4">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-12 text-content">
                <div class="hero-text">
                    <a href="/Products?category=fabrics" class="fabrics-text text-decoration-none text-center"
                       data-ar="أقمشة عبايات وكلف" data-en="Abaya Fabrics & Accessories">
                        أقمشة عبايات وكلف
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="clothes-section mx-4">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-4 text-content">
                <div class="hero-text">
                    <h1 class="clothes-text" data-ar="ملابس" data-en="Clothes">ملابس</h1>
                    <div class="collection-links">
                        <a href="/Products?category=casual" class="casual-text" data-ar="كاجوال" data-en="Casual">كاجوال</a>
                        <a href="/Products?category=evening" class="sahra-text" data-ar="سهرات" data-en="Evening">سهرات</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="weaving-section mx-4">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 text-content">
                <div class="hero-text d-flex flex-column gap-2">
                    <a href="/Products?category=leather" class="weaving-text text-decoration-none" data-ar="حياكة وزخرفة جلود"
                       data-en="Leather Sewing & Decoration">
                        حياكة وزخرفة جلود
                    </a>
                    <a href="/Products?category=embroidery" class="weaving-text text-decoration-none" data-ar="تطريز وشك"
                       data-en="Embroidery & Lace">
                        تطريز وشك
                    </a>
                    <a href="/Products?category=bags" class="weaving-text text-decoration-none" data-ar="شنط وأحزمة"
                       data-en="Bags & Belts">
                        شنط وأحزمة
                    </a>
                    <div class="d-flex flex-wrap gap-5">
                        <a href="/Products?category=raw-leather" class="weaving-text text-decoration-none" data-ar="جلود خام"
                           data-en="Raw Leather">
                            جلود خام
                        </a>
                        <a href="/Products?category=supplies" class="weaving-text text-decoration-none" data-ar="توزيعات"
                           data-en="Supplies">
                            توزيعات
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>