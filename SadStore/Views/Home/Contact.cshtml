@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Contact Us");
    var isRtl = Lang.IsRtl();
}

<div class="product-page">
    <nav class="breadcrumb-nav py-4 bg-light border-bottom">
        <div class="container">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/">
                        <span>@Lang.Get("Home")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active text-dark fw-bold">@Lang.Get("Contact Us")</li>
            </ol>
        </div>
    </nav>

    <section class="contact-content py-5" style="background-color: #fdfdfd;">
        <div class="container">
            <div class="row justify-content-center text-center mb-5">
                <div class="col-lg-8">
                    <h1 class="contact-title-large fw-bold mb-3" style="color: #4b3b1f;">@Lang.Get("Get in Touch")</h1>
                    <p class="contact-subtitle text-muted fs-5">@Lang.Get("We are here to help")</p>
                </div>
            </div>

            <div class="row justify-content-center g-4">
                <!-- WhatsApp Card -->
                <div class="col-md-4">
                    <a href="https://wa.me/966565532971" target="_blank" class="contact-card h-100 d-block text-decoration-none bg-white p-5 rounded-4 shadow-sm text-center transition-hover border-bottom border-4 border-success">
                        <div class="icon-box mb-4 text-success">
                            <i class="fab fa-whatsapp fa-4x"></i>
                        </div>
                        <h4 class="fw-bold mb-2 text-dark">@Lang.Get("Customer Service WhatsApp")</h4>
                        <p class="text-muted mb-0 fw-bold fs-5" dir="ltr">+966 56 553 2971</p>
                    </a>
                </div>

                <!-- Email Card -->
                <div class="col-md-4">
                    <div class="contact-card h-100 bg-white p-5 rounded-4 shadow-sm text-center transition-hover border-bottom border-4" style="border-color: #4b3b1f !important;">
                        <div class="icon-box mb-4" style="color: #4b3b1f;">
                            <i class="fas fa-envelope-open fa-4x"></i>
                        </div>
                        <h4 class="fw-bold mb-2 text-dark">@Lang.Get("Email")</h4>
                        <p class="text-muted mb-0 fs-5">info@store.com</p>
                    </div>
                </div>

                <!-- Phone Card -->
                <div class="col-md-4">
                    <div class="contact-card h-100 bg-white p-5 rounded-4 shadow-sm text-center transition-hover border-bottom border-4 border-secondary">
                        <div class="icon-box mb-4 text-secondary">
                            <i class="fas fa-headset fa-4x"></i>
                        </div>
                        <h4 class="fw-bold mb-2 text-dark">@Lang.Get("Unified Phone")</h4>
                        <p class="text-muted mb-0 fw-bold fs-5" dir="ltr">920010063</p>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center mt-5">
                <div class="col-md-6">
                    <div class="working-hours bg-white p-4 rounded-4 text-center shadow-sm border border-light">
                        <h5 class="fw-bold mb-3 text-dark"><i class="far fa-clock me-2 text-warning"></i> @Lang.Get("Working Hours")</h5>
                        <p class="mb-1 text-muted">@Lang.Get("Sunday to Thursday")</p>
                        <p class="fw-bold mb-0" style="color: #4b3b1f;">@Lang.Get("9:00 AM - 9:00 PM")</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .transition-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .transition-hover:hover {
            transform: translateY(-10px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important;
        }
</style>