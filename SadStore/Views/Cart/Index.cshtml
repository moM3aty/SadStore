@using Microsoft.AspNetCore.Mvc.Localization
@model SadStore.Controllers.CartViewModel
@inject SadStore.Services.CurrencyService Currency
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Shopping Cart");
    var isRtl = Lang.IsRtl();
    var symbol = Lang.Get(Currency.GetSymbol());
}

<div class="product-page">
    <nav class="breadcrumb-nav py-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <span>@Lang.Get("Home")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">@Lang.Get("Shopping Cart")</li>
            </ol>
        </div>
    </nav>
    <main class="container py-5">
        @if (Model.Items.Any())
        {
            <div class="row g-4">
                <div class="col-lg-4 order-lg-1">
                    <div class="summary-card shadow-sm">
                        <div class="summary-title">@Lang.Get("Order Summary")</div>

                        <div class="summary-row">
                            <span>@Lang.Get("Subtotal (Excl. Tax)")</span>
                            <span>@Currency.Convert(Model.SubTotal).ToString("N2") @symbol</span>
                        </div>

                        <div class="summary-row">
                            <span>@Lang.Get("VAT (15%)")</span>
                            <span>@Currency.Convert(Model.Tax).ToString("N2") @symbol</span>
                        </div>

                        <div class="summary-row total-row">
                            <span>@Lang.Get("Total")</span>
                            <span>@Currency.Convert(Model.GrandTotal).ToString("N2") @symbol</span>
                        </div>

                        <!-- تم التحديث: التوجيه لصفحة الـ Checkout بدلاً من الواتساب مباشرة -->
                        <a href="/Checkout" class="btn-checkout text-decoration-none text-center d-block">
                            @Lang.Get("Proceed to Checkout")
                        </a>
                    </div>
                </div>

                <div class="col-lg-8 order-lg-2" id="cart-container">
                    @foreach (var item in Model.Items)
                    {
                        var price = Currency.Convert(item.Product.Price);
                        var total = Currency.Convert(item.Total);
                        <div class="cart-item-card">
                            <form action="/Cart/Remove" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.Product.Id" />
                                <button type="submit" class="remove-btn">✕</button>
                            </form>

                            <div class="row align-items-center">
                                <div class="col-md-2 col-4 text-center">
                                    <div class="product-img">
                                        <img src="@item.Product.ImageUrl" class="img-fluid rounded-2" onerror="this.src='/images/product.webp'">
                                    </div>
                                </div>
                                <div class="col-md-6 col-8">
                                    <h6 class="fw-bold mb-1">@(isRtl? item.Product.NameAr : item.Product.NameEn)</h6>
                                    <div class="mt-3 fw-bold">
                                        <span>@price.ToString("N0")</span> <span>@symbol</span>
                                    </div>
                                </div>
                                <div class="col-md-4 mt-3 mt-md-0">
                                    <div class="d-flex flex-column align-items-md-end">
                                        <form action="/Cart/Update" method="post" class="qty-control mb-2">
                                            <input type="hidden" name="productId" value="@item.Product.Id" />
                                            <button type="submit" name="quantity" value="@(item.Quantity - 1)">-</button>
                                            <span>@item.Quantity</span>
                                            <button type="submit" name="quantity" value="@(item.Quantity + 1)">+</button>
                                        </form>
                                        <span class="text-muted small">@Lang.Get("Total"): @total.ToString("N0") @symbol</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-basket fa-3x mb-3 text-muted"></i>
                <h3>@Lang.Get("Your cart is empty")</h3>
                <a href="/Products" class="btn btn-primary mt-3">@Lang.Get("Browse Products")</a>
            </div>
        }
    </main>
</div>