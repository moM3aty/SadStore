@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Login / Register");
    var isRtl = Lang.IsRtl();
}

<section class="auth">
    <div class="container" id="container">
        <!-- زر التبديل للموبايل -->
        <div class="text-center mt-3 mb-0 d-lg-none">
            <button type="button" class="btn btn-link text-decoration-none fw-bold" style="color: #333;" onclick="toggleForm()">
                @Lang.Get("Login / Register") <i class="fas fa-exchange-alt"></i>
            </button>
        </div>

        <!-- فورم إنشاء الحساب (Sign Up) -->
        <div class="form-container sign-up-container">
            <form asp-action="Register" method="post">
                <h1 class="fw-bold mb-3">@Lang.Get("Create Account")</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span class="text-muted mb-3">@Lang.Get("or use your email for registration")</span>

                <div class="infield">
                    <input type="text" name="name" placeholder="@Lang.Get("Name")" required />
                    <label></label>
                </div>
                <div class="infield">
                    <input type="email" name="email" placeholder="@Lang.Get("Email")" required />
                    <label></label>
                </div>
                <div class="infield">
                    <input type="password" name="password" placeholder="@Lang.Get("Password")" required />
                    <label></label>
                </div>
                <button type="submit" class="mt-3">@Lang.Get("Sign Up")</button>
            </form>
        </div>

        <!-- فورم تسجيل الدخول (Sign In) -->
        <div class="form-container sign-in-container">
            <form asp-action="Login" method="post">
                <h1 class="fw-bold mb-3">@Lang.Get("Login")</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span class="text-muted mb-3">@Lang.Get("or use your account")</span>

                <div asp-validation-summary="All" class="text-danger small w-100"></div>

                <div class="infield">
                    <input type="email" name="email" placeholder="@Lang.Get("Email")" required />
                    <label></label>
                </div>
                <div class="infield">
                    <input type="password" name="password" placeholder="@Lang.Get("Password")" required />
                    <label></label>
                </div>
                <a href="#" class="forgot">@Lang.Get("Forgot your password?")</a>
                <button type="submit">@Lang.Get("Sign In")</button>
            </form>
        </div>

        <!-- اللوحة المنزلقة (Overlay) -->
        <div class="overlay-container" id="overlayCon">
            <div class="overlay">
                <!-- اللوحة اليسرى (تظهر عند تفعيل التسجيل) -->
                <div class="overlay-panel overlay-left">
                    <h1 class="fw-bold">@Lang.Get("Welcome Back!")</h1>
                    <p>@Lang.Get("To keep connected with us please login with your personal info")</p>
                    <button class="overlay-btn" id="signInBtn">@Lang.Get("Sign In")</button>
                </div>
                <!-- اللوحة اليمنى (تظهر عند تفعيل الدخول) -->
                <div class="overlay-panel overlay-right">
                    <h1 class="fw-bold">@Lang.Get("Hello, Friend!")</h1>
                    <p>@Lang.Get("Enter your personal details and start journey with us")</p>
                    <button class="overlay-btn" id="signUpBtn">@Lang.Get("Sign Up")</button>
                </div>
            </div>
            <!-- زر التبديل الدائري -->
            <button id="overlayBtn"></button>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const container = document.getElementById('container');
        const overlayBtn = document.getElementById('overlayBtn');
        const signInBtn = document.getElementById('signInBtn');
        const signUpBtn = document.getElementById('signUpBtn');

        // حركة الزر الدائري الصغير
        overlayBtn.addEventListener('click', () => {
            container.classList.toggle('right-panel-active');
            overlayBtn.classList.remove('btnScaled');
            window.requestAnimationFrame(() => {
                overlayBtn.classList.add('btnScaled');
            });
        });

        // زر الانتقال لتسجيل الدخول
        signInBtn.addEventListener('click', () => {
            container.classList.remove('right-panel-active');
        });

        // زر الانتقال لإنشاء حساب
        signUpBtn.addEventListener('click', () => {
            container.classList.add('right-panel-active');
        });

        // تبديل الفورم في الموبايل
        function toggleForm() {
            container.classList.toggle("right-panel-active");
        }
    </script>
}

@* تصحيح كامل للاتجاهات والحركة للغة الإنجليزية فقط *@
@if (!isRtl)
{
    <style>
        /* إعادة تعيين التموضع للغة الإنجليزية */
        html[dir="ltr"] .auth .sign-in-container {
            left: 0;
            width: 50%;
            z-index: 2;
            right: auto; /* إلغاء خصائص الـ RTL */
            transform: none;
        }

        html[dir="ltr"] .auth .sign-up-container {
            left: 0;
            width: 50%;
            opacity: 0;
            z-index: 1;
            right: auto;
            transform: none;
        }

        html[dir="ltr"] .auth .overlay-container {
            left: 50%;
            right: auto;
            width: 50%;
            z-index: 100;
            transform: none;
        }

        html[dir="ltr"] .auth .overlay {
            left: -100%;
            right: auto;
            width: 200%;
            transform: translateX(0);
            background: #111827;
        }

        /* ضبط النصوص داخل الغطاء */
        html[dir="ltr"] .auth .overlay-panel {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 40px;
            text-align: center;
            top: 0;
            height: 100%;
            width: 50%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }

        /* اللوحة اليسرى (Welcome Back) - مخفية مبدئياً لليسار */
        html[dir="ltr"] .auth .overlay-left {
            transform: translateX(-20%);
            left: 0;
            right: auto;
        }

        /* اللوحة اليمنى (Hello Friend) - ظاهرة مبدئياً على اليمين */
        html[dir="ltr"] .auth .overlay-right {
            right: 0;
            left: auto;
            transform: translateX(0);
        }

        /* زر الحركة */
        html[dir="ltr"] .auth #overlayBtn {
            left: 50%;
            right: auto;
            transform: translateX(-50%);
        }

        /* === عند الضغط على Sign Up (التحرك) === */

        /* تحريك فورم الدخول لليمين (يختفي) */
        html[dir="ltr"] .auth .container.right-panel-active .sign-in-container {
            transform: translateX(100%);
        }

        /* تحريك فورم إنشاء الحساب لليمين (يظهر) */
        html[dir="ltr"] .auth .container.right-panel-active .sign-up-container {
            transform: translateX(100%);
            opacity: 1;
            z-index: 5;
            animation: show 0.6s;
        }

        /* تحريك الغطاء بالكامل لليسار */
        html[dir="ltr"] .auth .container.right-panel-active .overlay-container {
            transform: translateX(-100%);
        }

        /* تحريك الغطاء الداخلي لضبط الخلفية */
        html[dir="ltr"] .auth .container.right-panel-active .overlay {
            transform: translateX(50%);
        }

        /* إظهار لوحة Welcome Back */
        html[dir="ltr"] .auth .container.right-panel-active .overlay-left {
            transform: translateX(0);
        }

        /* إخفاء لوحة Hello Friend */
        html[dir="ltr"] .auth .container.right-panel-active .overlay-right {
            transform: translateX(20%);
        }

        @@keyframes show {
            0%, 49.99%

        {
            opacity: 0;
            z-index: 1;
        }

        50%, 100% {
            opacity: 1;
            z-index: 5;
        }

        }
    </style>
}