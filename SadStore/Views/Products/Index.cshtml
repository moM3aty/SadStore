@model List<SadStore.Data.Product>
@inject SadStore.Services.LanguageService Lang
@using System.Text.Json

@{
    ViewData["Title"] = Lang.Get("Products");
    var isRtl = Lang.IsRtl();

    // قراءة القيم الحالية من الرابط لتفعيل حالة "Checked" في العناصر
    var currentRating = Context.Request.Query["rating"].ToString();
    var currentMin = Context.Request.Query["minPrice"].ToString();
    var currentMax = Context.Request.Query["maxPrice"].ToString();

    // تحديد النطاق النشط بناءً على القيم
    string activePriceRange = "";
    if (currentMin == "200" && currentMax == "300") { activePriceRange = "range1"; }
    else if (currentMin == "300" && currentMax == "400") { activePriceRange = "range2"; }
    else if (currentMin == "400" && string.IsNullOrEmpty(currentMax)) { activePriceRange = "range3"; }

    // التحقق من المفضلة
    List<int> wishlistIds = new List<int>();
    var wishlistCookie = Context.Request.Cookies["SadStore_Wishlist"];
    if (!string.IsNullOrEmpty(wishlistCookie))
    {
        try { wishlistIds = JsonSerializer.Deserialize<List<int>>(wishlistCookie) ?? new List<int>(); } catch { }
    }
}

<div class="product-page bg-light-gray" style="background-color: #f9f9f9; min-height: 100vh;">

    <!-- Header Section -->
    <header class="header-section py-4 bg-white shadow-sm mb-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title mb-0 fw-bold text-dark" style="font-family: 'Cairo', sans-serif;">@Lang.Get("Products")</h1>
                    <p class="text-muted small mb-0 mt-1">@Lang.Get("The first destination for all women's details")</p>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-md-end align-items-center gap-3 mt-3 mt-md-0">
                        <span class="text-muted fw-bold small text-uppercase">@Lang.Get("Sort"):</span>
                        <!-- Sort Dropdown using JS to update params -->
                        <div class="dropdown">
                            <button class="btn btn-white border px-4 py-2 rounded-pill dropdown-toggle shadow-sm" type="button"
                                    id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                @Lang.Get("Our Suggestions")
                            </button>
                            <ul class="dropdown-menu shadow border-0 rounded-3 mt-2">
                                <li><a class="dropdown-item py-2" href="#" onclick="applyFilter('sort', 'newest'); return false;">@Lang.Get("Newest")</a></li>
                                <li><a class="dropdown-item py-2" href="#" onclick="applyFilter('sort', 'price_desc'); return false;">@Lang.Get("Price: High to Low")</a></li>
                                <li><a class="dropdown-item py-2" href="#" onclick="applyFilter('sort', 'price_asc'); return false;">@Lang.Get("Price: Low to High")</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container pb-5">
        <div class="row">
            <!-- Sidebar Filters -->
            <aside class="col-lg-3 mb-4">
                <div class="filters-sidebar bg-white p-4 rounded-4 shadow-sm sticky-top" style="top: 100px; z-index: 99;">

                    <!-- Search Box -->
                    <div class="mb-4">
                        <label class="form-label fw-bold mb-2 text-dark">@Lang.Get("Search")</label>
                        <div class="input-group">
                            <input type="text" id="searchInput" class="form-control bg-light border-0" value="@ViewBag.Search" placeholder="@Lang.Get("Search...")">
                            <button class="btn btn-dark" onclick="applySearch()"><i class="fas fa-search"></i></button>
                        </div>
                    </div>

                    <!-- Rating Filter -->
                    <div class="filter-group mb-4 border-bottom pb-4">
                        <h6 class="filter-title fw-bold mb-3 text-dark">@Lang.Get("Rating")</h6>
                        <div class="filter-options">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="rating" id="rating5" value="5"
                                       @(currentRating == "5" ? "checked" : "") onclick="applyFilter('rating', '5')">
                                <label class="form-check-label text-warning cursor-pointer" for="rating5">
                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="rating" id="rating4" value="4"
                                       @(currentRating == "4" ? "checked" : "") onclick="applyFilter('rating', '4')">
                                <label class="form-check-label text-warning cursor-pointer" for="rating4">
                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star text-muted opacity-25"></i>
                                    <span class="text-muted small ms-1 text-dark">& Up</span>
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="rating" id="rating3" value="3"
                                       @(currentRating == "3" ? "checked" : "") onclick="applyFilter('rating', '3')">
                                <label class="form-check-label text-warning cursor-pointer" for="rating3">
                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star text-muted opacity-25"></i><i class="fas fa-star text-muted opacity-25"></i>
                                    <span class="text-muted small ms-1 text-dark">& Up</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Price Filter -->
                    <div class="filter-group mb-4">
                        <h6 class="filter-title fw-bold mb-3 text-dark">@Lang.Get("Price")</h6>
                        <div class="filter-options">
                            <!-- Predefined Ranges -->
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="priceRange1"
                                       @(activePriceRange == "range1" ? "checked" : "") onclick="applyPriceRange(200, 300)">
                                <label class="form-check-label small cursor-pointer" for="priceRange1">200 - 300 @Lang.Get("SAR")</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="priceRange2"
                                       @(activePriceRange == "range2" ? "checked" : "") onclick="applyPriceRange(300, 400)">
                                <label class="form-check-label small cursor-pointer" for="priceRange2">300 - 400 @Lang.Get("SAR")</label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="priceRange" id="priceRange3"
                                       @(activePriceRange == "range3" ? "checked" : "") onclick="applyPriceRange(400, '')">
                                <label class="form-check-label small cursor-pointer" for="priceRange3">@Lang.Get("More than") 400 @Lang.Get("SAR")</label>
                            </div>

                            <!-- Manual Price Inputs -->
                            <label class="small text-muted mb-1">@Lang.Get("Custom Range"):</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" id="minPriceInput" class="form-control form-control-sm bg-light border-0"
                                           placeholder="@Lang.Get("From")" value="@currentMin">
                                </div>
                                <div class="col-6">
                                    <input type="number" id="maxPriceInput" class="form-control form-control-sm bg-light border-0"
                                           placeholder="@Lang.Get("To")" value="@currentMax">
                                </div>
                                <div class="col-12 mt-2">
                                    <button type="button" class="btn btn-dark btn-sm w-100 rounded-pill" onclick="applyManualPrice()">@Lang.Get("Filter")</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a href="/Products" class="btn btn-outline-danger btn-sm w-100 rounded-pill">
                        <i class="fas fa-times me-1"></i> @Lang.Get("Clear Filters")
                    </a>
                </div>
            </aside>

            <!-- Products Grid -->
            <main class="col-lg-9">
                <div class="row g-4" id="productsContainer">
                    @foreach (var item in Model)
                    {
                        var isFav = wishlistIds.Contains(item.Id);

                        <div class="col-md-6 col-lg-4">
                            <div class="product-card-premium h-100 bg-white rounded-4 shadow-hover position-relative overflow-hidden group-hover">
                                <a href="/Products/Details/@item.Id" class="text-decoration-none">

                                    <div class="image-container position-relative overflow-hidden" style="height: 380px;">
                                        @if (item.IsFeatured)
                                        {
                                            <span class="badge bg-dark text-white position-absolute top-0 start-0 m-3 px-3 py-2 rounded-pill z-2">@Lang.Get("New")</span>
                                        }
                                        <img src="@item.ImageUrl" alt="@(isRtl? item.NameAr: item.NameEn)" class="product-img w-100 h-100 object-fit-cover transition-transform" onerror="this.src='/images/product.webp'">

                                        <!-- Actions -->
                                        <div class="overlay-actions position-absolute bottom-0 start-0 w-100 p-3 d-flex justify-content-center gap-2 z-2">
                                            <button type="button" class="btn btn-white rounded-circle shadow-sm action-icon" title="@Lang.Get("Quick View")"
                                                    onclick="event.preventDefault(); window.location.href='/Products/Details/@item.Id'">
                                                <i class="far fa-eye text-dark"></i>
                                            </button>

                                            <button type="button" class="btn btn-white rounded-circle shadow-sm action-icon"
                                                    title="@Lang.Get("Wishlist")" onclick="toggleWishlist(event, @item.Id, this)">
                                                <i class="@(isFav ? "fas text-danger" : "far text-danger") fa-heart"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-body p-3 text-center">
                                        <small class="text-muted text-uppercase d-block mb-1" style="font-size: 0.75rem;">
                                            @(item.Category != null ? (isRtl ? item.Category.NameAr : item.Category.NameEn) : "")
                                        </small>
                                        <h6 class="product-title fw-bold text-dark mb-2 text-truncate">
                                            @(isRtl? item.NameAr: item.NameEn)
                                        </h6>
                                        <div class="price-wrapper mb-3">
                                            @if (item.OldPrice.HasValue && item.OldPrice > item.Price)
                                            {
                                                <span class="text-decoration-line-through text-muted small me-2">@item.OldPrice.Value.ToString("N0")</span>
                                            }
                                            <span class="fw-bold fs-5 text-primary">@item.Price.ToString("N0") <small class="fs-6">@Lang.Get("SAR")</small></span>
                                        </div>
                                    </div>
                                </a>

                                <!-- Cart Footer -->
                                <div class="card-footer bg-white border-0 p-3 pt-0">
                                    <form action="/Cart/Add" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <div class="flex-grow-1">
                                            <select class="form-select form-select-sm bg-light border-0 rounded-3 text-center h-100" name="size" onclick="event.stopPropagation();">
                                                <option value="">@Lang.Get("Select Size")</option>
                                                @if (!string.IsNullOrEmpty(item.AvailableSizes))
                                                {
                                                    foreach (var s in item.AvailableSizes.Split(','))
                                                    {
                                                        <option value="@s.Trim()">@s.Trim()</option>
                                                    }
                                                }
                                                else
                                                {
                                                    <option value="S">S</option>
                                                    <option value="M">M</option>
                                                    <option value="L">L</option>
                                                    <option value="XL">XL</option>
                                                }
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-dark btn-sm rounded-3 px-3 transition-colors">
                                            <i class="fas fa-shopping-bag"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="col-12">
                            <div class="text-center py-5 rounded-4 bg-white shadow-sm">
                                <i class="fas fa-search fa-3x text-muted mb-3 opacity-25"></i>
                                <h4 class="text-muted">@Lang.Get("No products found matching your search.")</h4>
                                <a href="/Products" class="btn btn-outline-dark mt-3 rounded-pill px-4">@Lang.Get("Clear Filters")</a>
                            </div>
                        </div>
                    }
                </div>
            </main>
        </div>
    </div>
</div>

<style>
    /* Styling */
    :root {
        --primary-color: #c89f72;
        --dark-color: #1a1a1a;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .product-card-premium {
        transition: all 0.3s ease-in-out;
        border: 1px solid transparent;
    }

        .product-card-premium:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.08);
            border-color: #f0f0f0;
        }

    .image-container img {
        transition: transform 0.5s ease;
    }

    .product-card-premium:hover .image-container img {
        transform: scale(1.05);
    }

    .overlay-actions {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
    }

    .product-card-premium:hover .overlay-actions {
        opacity: 1;
        transform: translateY(0);
    }

    .action-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: none;
    }

        .action-icon:hover {
            background-color: var(--primary-color);
            color: white !important;
        }

            .action-icon:hover i {
                color: white !important;
            }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-white {
        background-color: white;
        border: 1px solid #eee;
    }

    .form-select {
        cursor: pointer;
    }

        .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: none;
        }

    .transition-colors {
        transition: background-color 0.3s ease;
    }

    .cursor-pointer {
        cursor: pointer;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // دالة تحديث الفلتر في الرابط
        function applyFilter(key, value) {
            const urlParams = new URLSearchParams(window.location.search);

            // عند تغيير السعر أو التقييم، نضمن مسح القيم المتضاربة إن وجدت
            if (value === '' || value === null) {
                urlParams.delete(key);
            } else {
                urlParams.set(key, value);
            }

            // إعادة تحميل الصفحة بالقيم الجديدة
            window.location.search = urlParams.toString();
        }

        // دالة فلترة نطاقات السعر
        function applyPriceRange(min, max) {
            const urlParams = new URLSearchParams(window.location.search);

            // حذف أي نطاق سابق
            urlParams.delete('priceRange');

            if (min) urlParams.set('minPrice', min);
            else urlParams.delete('minPrice');

            if (max) urlParams.set('maxPrice', max);
            else urlParams.delete('maxPrice');

            window.location.search = urlParams.toString();
        }

        // دالة السعر اليدوي
        function applyManualPrice() {
            const min = document.getElementById('minPriceInput').value;
            const max = document.getElementById('maxPriceInput').value;
            applyPriceRange(min, max);
        }

        // دالة البحث
        function applySearch() {
            const val = document.getElementById('searchInput').value;
            applyFilter('search', val);
        }

        // Wishlist
        function toggleWishlist(event, productId, btnElement) {
            event.preventDefault();
            fetch('/Wishlist/Toggle', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `productId=${productId}`
            }).then(response => {
                if (response.ok) {
                    const icon = btnElement.querySelector('i');
                    const isAdded = icon.classList.contains('far');
                    if (isAdded) {
                        icon.classList.remove('far'); icon.classList.add('fas');
                        Swal.fire({ toast: true, position: 'top-end', icon: 'success', title: '@Lang.Get("Saved successfully")', showConfirmButton: false, timer: 3000 });
                    } else {
                        icon.classList.remove('fas'); icon.classList.add('far');
                    }
                }
            });
        }
    </script>
}