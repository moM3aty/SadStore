@model List<SadStore.Data.Product>
@{
    ViewData["Title"] = "المنتجات";
}

<div class="product-page">
    <header class="header-section py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title mb-0" data-ar="المنتجات" data-en="Products">المنتجات</h1>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end align-items-center gap-3">
                        <span class="text-muted" data-ar="ترتيب" data-en="Sort">ترتيب</span>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                                    id="sortDropdown" data-bs-toggle="dropdown">
                                مقترحاتنا
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="?sort=newest">الأحدث</a></li>
                                <li><a class="dropdown-item" href="?sort=price_desc">السعر من الاعلي للاقل</a></li>
                                <li><a class="dropdown-item" href="?sort=price_asc">السعر من الاقل للاعلي</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container py-5">
        <div class="row">
            <aside class="col-lg-3 mb-4">
                <div class="filters-section">
                    <div class="filter-group mb-4">
                        <h5 class="filter-title" data-ar="بحث" data-en="Search">بحث</h5>
                        <form action="/Products" method="get">
                            <input type="search" name="search" class="form-control" placeholder="ابحث عن منتج..." value="@ViewBag.Search" />
                        </form>
                    </div>
                    <div class="filter-group mb-4">
                        <h5 class="filter-title" data-ar="السعر" data-en="Price">السعر</h5>
                        <div class="filter-options">
                            <div class="form-check mb-2">
                                <label class="form-check-label">أقل من 200 ريال</label>
                                <input class="form-check-input" type="radio" name="price" value="0-200">
                            </div>
                            <div class="form-check mb-2">
                                <label class="form-check-label">200 - 400 ريال</label>
                                <input class="form-check-input" type="radio" name="price" value="200-400">
                            </div>
                        </div>
                    </div>
                    <a href="/Products" class="btn btn-light w-100 mt-3">مسح الفلاتر</a>
                </div>
            </aside>

            <main class="col-lg-9">
                <div class="row g-4" id="productsContainer">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <a href="/Products/Details/@item.Id" class="products-card">
                                <div class="products-image-wrapper">
                                    @if (item.IsFeatured)
                                    {
                                        <span class="new-badge" data-ar="مميز" data-en="Featured">مميز</span>
                                    }
                                    <img src="@item.ImageUrl" alt="@item.NameAr" class="products-image" onerror="this.src='/images/product.webp'">
                                    <div class="products-actions">
                                        <span class="action-btn quick-view-btn">
                                            <i class="far fa-eye"></i>
                                        </span>
                                        <span class="action-btn wishlist-btn">
                                            <i class="fas fa-heart"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="products-info">
                                    <h3 class="products-title">@item.NameAr</h3>
                                    <div class="products-price">
                                        @item.Price <span class="coin">ريال</span>
                                    </div>
                                    <button class="add-to-cart-btn">
                                        <i class="fas fa-shopping-cart"></i> إضافة للسلة
                                    </button>
                                </div>
                            </a>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="col-12 text-center">
                            <p>لا توجد منتجات مطابقة للبحث.</p>
                        </div>
                    }
                </div>
            </main>
        </div>
    </div>
</div>