@model SadStore.Data.Product
@inject SadStore.Services.LanguageService Lang
@using System.Text.Json

@{
    var isRtl = Lang.IsRtl();
    ViewData["Title"] = isRtl ? Model.NameAr : Model.NameEn;
    var related = ViewBag.RelatedProducts as List<SadStore.Data.Product>;
    var reviews = ViewBag.Reviews as List<SadStore.Data.CustomerReview>;

    // حساب نسبة الخصم
    int discountPercentage = 0;
    if (Model.OldPrice.HasValue && Model.OldPrice > Model.Price)
    {
        discountPercentage = (int)((1 - (Model.Price / Model.OldPrice.Value)) * 100);
    }

    // التحقق من حالة المفضلة
    bool isInWishlist = false;
    var wishlistCookie = Context.Request.Cookies["SadStore_Wishlist"];
    if (!string.IsNullOrEmpty(wishlistCookie))
    {
        try
        {
            var wishlistIds = JsonSerializer.Deserialize<List<int>>(wishlistCookie);
            if (wishlistIds != null && wishlistIds.Contains(Model.Id)) isInWishlist = true;
        }
        catch { }
    }
}

<div class="product-details-page product-page">
    <nav class="breadcrumb-nav py-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <span>@Lang.Get("Home")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Products">
                        <span>@Lang.Get("Products")</span>
                        <i class="fas @(isRtl ? "fa-angle-left" : "fa-angle-right") mx-2 fs-6 breadcrumb-arrow"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">@(isRtl? Model.NameAr: Model.NameEn)</li>
            </ol>
        </div>
    </nav>

    <section class="product-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-images">
                        <!-- Thumbnails -->
                        <div class="thumbnail-images">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                int idx = 0;
                                foreach (var img in Model.Images)
                                {
                                    <img src="@img.Url" alt="Thumbnail" class="thumbnail @(idx == 0 ? "active" : "")"
                                         onclick="changeImage(this)" onerror="this.src='/images/product.webp'">
                                    idx++;
                                }
                            }
                            else
                            {
                                <img src="@Model.ImageUrl" class="thumbnail active" onclick="changeImage(this)" onerror="this.src='/images/product.webp'">
                            }
                        </div>

                        <!-- Main Image -->
                        <div class="main-image-container">
                           
                            @if (discountPercentage > 0)
                            {
                                <span class="badge-new" style="background-color: #dc3545; top: 20px;justify-content:left;">-@discountPercentage%</span>
                            }

                            <!-- Wishlist Form inside the button logic -->
                            <form action="/Wishlist/Toggle" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <button type="submit" class="btn-wishlist" style="border:none; background:white; cursor:pointer;top:20px;">
                                    <i class="@(isInWishlist ? "fas text-danger" : "far") fa-heart"></i>
                                </button>
                            </form>


                            <img id="mainImage"
                                 src="@(Model.Images != null && Model.Images.Any() ? Model.Images.First().Url : Model.ImageUrl)"
                                 alt="@(isRtl? Model.NameAr: Model.NameEn)"
                                 class="main-image"
                                 onerror="this.src='/images/main-product-details.webp'">
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="product-info">
                        <h2 class="product-title">@(isRtl? Model.NameAr: Model.NameEn)</h2>

                        <div class="product-price">
                            @if (Model.OldPrice.HasValue && Model.OldPrice > Model.Price)
                            {
                                <span class="text-decoration-line-through text-muted fs-6 mx-2">
                                    @Model.OldPrice.Value.ToString("N0") @Lang.Get("SAR")
                                </span>
                            }
                            <span class="price">@Model.Price.ToString("N0") <span class="coin">@Lang.Get("SAR")</span></span>
                        </div>

                        <p class="price-note">@Lang.Get("Price includes VAT")</p>

                        <div class="product-tags">
                            <a href="#" class="tag">@(Model.Category != null ? (isRtl ? Model.Category.NameAr : Model.Category.NameEn) : "")</a>
                        </div>

                        <div class="availability">
                            <i class="fas fa-check-circle"></i>
                            <span>@(Model.StockQuantity > 0 ? Lang.Get("Available") : Lang.Get("Out of Stock"))</span>
                        </div>

                        <div class="payment-options">
                            <div class="payment-item">
                                <div class="payment-logo tamara-logo">
                                    <img src="~/images/tamara.svg" alt="tamara" onerror="this.style.display='none'">
                                </div>
                                <p>
                                    @if (isRtl)
                                    {
                                        <text>أو قسم فاتورتك على <strong>4 دفعات</strong> بقيمة <strong>@((Model.Price / 4).ToString("N2")) @Lang.Get("SAR")</strong> بدون رسوم تأخير.</text>
                                    }
                                    else
                                    {
                                        <text>Split into <strong>4 payments</strong> of <strong>@((Model.Price / 4).ToString("N2")) @Lang.Get("SAR")</strong> with no late fees.</text>
                                    }
                                </p>
                            </div>
                            <div class="payment-item">
                                <div class="payment-logo tabby-logo">
                                    <img src="~/images/tabby_installment_mini.avif" alt="tabby" onerror="this.style.display='none'">
                                </div>
                                <p>
                                    @if (isRtl)
                                    {
                                        <text>ابتداءً من <strong>@((Model.Price / 4).ToString("N2")) @Lang.Get("SAR")</strong> شهرياً. متوافق مع الشريعة.</text>
                                    }
                                    else
                                    {
                                        <text>Starting from <strong>@((Model.Price / 4).ToString("N2")) @Lang.Get("SAR")</strong> monthly. Sharia compliant.</text>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="product-number my-3">
                            <span>@Lang.Get("Product Number")</span>
                            <strong>@Model.ModelNumber </strong>
                        </div>

                        <form action="/Cart/Add" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />

                            @if (!string.IsNullOrEmpty(Model.AvailableSizes))
                            {
                                <div class="size-selector mb-3 d-flex justify-content-between align-items-center">
                                    <label class="form-label mb-0">@Lang.Get("Select Size") <span class="text-danger">*</span></label>
                                    <select class="form-select w-50" name="size" required>
                                        <option value="">@Lang.Get("Select Size")</option>
                                        @foreach (var size in Model.AvailableSizes.Split(','))
                                        {
                                            <option value="@size.Trim()">@size.Trim()</option>
                                        }
                                    </select>
                                </div>
                            }

                            <div class="quantity-selector mb-4 d-flex justify-content-between align-items-center">
                                <label class="form-label mb-0">@Lang.Get("Quantity")</label>
                                <div class="quantity-controls">
                                    <button type="button" class="qty-btn" onclick="decreaseQty()">−</button>
                                    <input type="text" id="quantity" name="quantity" value="1" readonly>
                                    <button type="button" class="qty-btn" onclick="increaseQty()">+</button>
                                </div>
                            </div>

                            <div class="action-buttons">
                                <button type="submit" class="btn btn-outline-primary btn-buy-now">
                                    <i class="fas fa-shopping-cart"></i> @Lang.Get("Buy Now")
                                </button>
                                <button type="submit" class="btn btn-primary btn-add-cart">
                                    <i class="fas fa-shopping-bag"></i> @Lang.Get("Add to Cart")
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-12">
                    <ul class="nav nav-tabs product-tabs" id="productTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#details" type="button">@Lang.Get("Product Details")</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#reviews" type="button">@Lang.Get("Reviews")</button>
                        </li>
                    </ul>

                    <div class="tab-content product-tab-content">
                        <div class="tab-pane fade show active" id="details">
                            <h3>@Lang.Get("Description")</h3>
                            <p>@(isRtl? Model.DescriptionAr: Model.DescriptionEn)</p>

                            <!-- عرض المواصفات الإضافية بنفس الستايل -->
                            <ul class="product-specs mt-3">
                                @if (!string.IsNullOrEmpty(isRtl ? Model.DesignTypeAr : Model.DesignTypeEn))
                                {
                                    <li><strong>@Lang.Get("Design Type"):</strong> @(isRtl? Model.DesignTypeAr: Model.DesignTypeEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.CutTypeAr : Model.CutTypeEn))
                                {
                                    <li><strong>@Lang.Get("Cut Type"):</strong> @(isRtl? Model.CutTypeAr: Model.CutTypeEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.OccasionAr : Model.OccasionEn))
                                {
                                    <li><strong>@Lang.Get("Occasion"):</strong> @(isRtl? Model.OccasionAr: Model.OccasionEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.FitTypeAr : Model.FitTypeEn))
                                {
                                    <li><strong>@Lang.Get("Fit Type"):</strong> @(isRtl? Model.FitTypeAr: Model.FitTypeEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.LiningAr : Model.LiningEn))
                                {
                                    <li><strong>@Lang.Get("Lining"):</strong> @(isRtl? Model.LiningAr: Model.LiningEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.SleevesAr : Model.SleevesEn))
                                {
                                    <li><strong>@Lang.Get("Sleeves"):</strong> @(isRtl? Model.SleevesAr: Model.SleevesEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.StretchAr : Model.StretchEn))
                                {
                                    <li><strong>@Lang.Get("Stretch"):</strong> @(isRtl? Model.StretchAr: Model.StretchEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.MaterialAr : Model.MaterialEn))
                                {
                                    <li><strong>@Lang.Get("Material"):</strong> @(isRtl? Model.MaterialAr: Model.MaterialEn)</li>
                                }
                                @if (!string.IsNullOrEmpty(isRtl ? Model.CareInstructionsAr : Model.CareInstructionsEn))
                                {
                                    <li><strong>@Lang.Get("Care Instructions"):</strong> @(isRtl? Model.CareInstructionsAr: Model.CareInstructionsEn)</li>
                                }
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="reviews">
                            @if (reviews != null && reviews.Any())
                            {
                                foreach (var rev in reviews)
                                {
                                    <div class="review-item border-bottom pb-3 mb-3">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="fw-bold">@rev.CustomerName</h6>
                                            <div class="text-warning">
                                                @for (int i = 0; i < rev.Rating; i++)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                            </div>
                                        </div>
                                        <p class="text-muted mb-0">@rev.ReviewText</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">@Lang.Get("No reviews yet for this product.")</p>
                            }

                            <!-- Review Form -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <hr>
                                <form asp-area="" asp-controller="Products" asp-action="AddReview" method="post" class="mt-4">
                                    <input type="hidden" name="productId" value="@Model.Id" />
                                    <h5 class="mb-3">@Lang.Get("Add Your Review")</h5>
                                    <div class="mb-3">
                                        <label class="form-label d-block fw-bold mb-2">@Lang.Get("Rating")</label>
                                        <div class="star-rating d-inline-flex flex-row-reverse justify-content-center">
                                            <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="5 stars"><i class="fas fa-star"></i></label>
                                            <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="4 stars"><i class="fas fa-star"></i></label>
                                            <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="3 stars"><i class="fas fa-star"></i></label>
                                            <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="2 stars"><i class="fas fa-star"></i></label>
                                            <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="1 star"><i class="fas fa-star"></i></label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <textarea name="reviewText" class="form-control" rows="3" placeholder="@Lang.Get("Write your review here...")"></textarea>
                                    </div>
                                    <button class="btn btn-primary btn-sm">@Lang.Get("Submit Review")</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (related != null && related.Any())
            {
                <div class="row mt-5 pt-5 border-top">
                    <div class="col-12 mb-5 d-flex justify-content-between align-items-center">
                        <h3 class="section-title fw-bold mb-0 text-dark border-start border-5 ps-3" style="border:#a67c52;">@Lang.Get("Related Products")</h3>
                        <a href="/Products" class="btn btn-outline-dark rounded-pill px-4">@Lang.Get("View All")</a>
                    </div>
                    @foreach (var item in related)
                    {
                        <div class="col-6 col-md-3">
                            <div class="product-card-premium h-100 bg-white rounded-4 shadow-hover position-relative overflow-hidden group-hover">
                                <a href="/Products/Details/@item.Id" class="text-decoration-none">
                                    <div class="image-container position-relative overflow-hidden" style="height: 320px;">
                                        <img src="@item.ImageUrl" class="w-100 h-100 object-fit-cover transition-transform" onerror="this.src='/images/product.webp'">

                                        <!-- Quick add button overlay -->
                                        <div class="overlay-quick-add position-absolute bottom-0 start-0 w-100 p-2 z-2 opacity-0 transition-all">
                                            <button class="btn btn-light w-100 rounded-3 shadow-sm text-primary fw-bold">@Lang.Get("Quick View")</button>
                                        </div>
                                    </div>
                                    <div class="card-body p-3 text-center">
                                        <h6 class="text-dark fw-bold text-truncate mb-1">@(isRtl? item.NameAr: item.NameEn)</h6>
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            <span style="color:#a67c52;" class="fw-bold">@item.Price.ToString("N0") @Lang.Get("SAR")</span>
                                            @if (item.OldPrice.HasValue && item.OldPrice > item.Price)
                                            {
                                                <small class="text-muted text-decoration-line-through">@item.OldPrice.Value.ToString("N0")</small>
                                            }
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>
</div>
<style>
    .star-rating input {
        display: none;
    }

    .star-rating label {
        font-size: 2rem;
        color: #ddd;
        cursor: pointer;
        padding: 0 5px;
        transition: color 0.2s;
    }

        .star-rating input:checked ~ label,
        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: #ffc107;
        }
        </style>
@section Scripts {
    <script src="~/js/product-details.js"></script>
}