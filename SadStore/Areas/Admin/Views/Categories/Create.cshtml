@model SadStore.Data.Category
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Add New Category");
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Lang.Get("Add New Category")</h5>
                <a href="/Admin/Categories" class="btn btn-outline-secondary btn-sm">@Lang.Get("Back to List")</a>
            </div>
            <div class="card-body">
                <form action="/Admin/Categories/Create" method="post">
                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Category Name (Ar)")</label>
                        <input type="text" name="NameAr" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Category Name (En)")</label>
                        <input type="text" name="NameEn" class="form-control" required />
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-custom">@Lang.Get("Save Category")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>