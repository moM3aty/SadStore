@model SadStore.Data.Category
@inject SadStore.Services.LanguageService Lang

@{
    ViewData["Title"] = Lang.Get("Edit Category");
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Lang.Get("Edit Category"): @Model.NameAr</h5>
                <a href="/Admin/Categories" class="btn btn-outline-secondary btn-sm">@Lang.Get("Back to List")</a>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Category Name (Ar)")</label>
                        <input type="text" asp-for="NameAr" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Category Name (En)")</label>
                        <input type="text" asp-for="NameEn" class="form-control" required />
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-custom">@Lang.Get("Save Changes")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>