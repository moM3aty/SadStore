@model SadStore.Data.ShippingLocation

@{
    ViewData["Title"] = "تعديل منطقة الشحن";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0">تعديل منطقة: @Model.CityName</h5>
            </div>
            <div class="card-body">
                <form action="/Admin/Shipping/Edit/@Model.Id" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">اسم المدينة / المنطقة</label>
                        <input type="text" asp-for="CityName" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">تكلفة الشحن (ر.س)</label>
                        <input type="number" asp-for="ShippingCost" class="form-control" step="0.01" required />
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-custom">حفظ التغييرات</button>
                        <a href="/Admin/Shipping" class="btn btn-link mt-2">إلغاء</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>