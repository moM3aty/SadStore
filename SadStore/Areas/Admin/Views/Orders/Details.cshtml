@model SadStore.Data.Order

@{
    ViewData["Title"] = "تفاصيل الطلب #" + Model.Id;
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-dark"><i class="fas fa-file-invoice me-2"></i> المنتجات المطلوبة</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>المنتج</th>
                                <th class="text-center">الكمية</th>
                                <th class="text-center">السعر</th>
                                <th class="text-center">الإجمالي</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (item.Product != null)
                                            {
                                                <img src="@item.Product.ImageUrl" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;" onerror="this.src='/images/product-1.jpeg'">
                                                <span>@item.Product.NameAr</span>
                                            }
                                            else
                                            {
                                                <span>منتج محذوف</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-center">@item.Price.ToString("N2")</td>
                                    <td class="text-center">@((item.Price * item.Quantity).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light fw-bold">
                            <tr>
                                <td colspan="3" class="text-end">الإجمالي الكلي (شامل الضريبة):</td>
                                <td class="text-center text-success">@Model.TotalAmount.ToString("N2") ر.س</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-dark">معلومات العميل</h5>
            </div>
            <div class="card-body">
                <p><strong>الاسم:</strong> @Model.CustomerName</p>
                <p><strong>التاريخ:</strong> @Model.OrderDate.ToString("yyyy/MM/dd")</p>
                <p><strong>العنوان:</strong> @(string.IsNullOrEmpty(Model.Address) ? "غير محدد" : Model.Address)</p>
                <p><strong>الهاتف:</strong> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "غير محدد" : Model.PhoneNumber)</p>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-dark">تحديث الحالة</h5>
            </div>
            <div class="card-body">
                <form action="/Admin/Orders/UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">حالة الطلب الحالية:</label>
                        <select name="status" class="form-select">
                            <!option value="جديد" @(Model.Status == "جديد" ? "selected" : "")>جديد</!option>
                            <!option value="قيد التنفيذ" @(Model.Status == "قيد التنفيذ" ? "selected" : "")>قيد التنفيذ</!option>
                            <!option value="تم الشحن" @(Model.Status == "تم الشحن" ? "selected" : "")>تم الشحن</!option>
                            <!option value="مكتمل" @(Model.Status == "مكتمل" ? "selected" : "")>مكتمل</!option>
                            <!option value="ملغي" @(Model.Status == "ملغي" ? "selected" : "")>ملغي</!option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">تحديث الحالة</button>
                </form>
            </div>
        </div>
    </div>
</div>