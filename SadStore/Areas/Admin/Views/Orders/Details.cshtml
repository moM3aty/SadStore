@model SadStore.Data.Order
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Order Details") + " #" + Model.Id;
    Layout = "_AdminLayout";
    var isRtl = Lang.IsRtl();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1">@Lang.Get("Order Details") <span class="text-primary">#@Model.Id</span></h4>
        <span class="text-muted small"><i class="far fa-calendar-alt me-1"></i> @Model.OrderDate.ToString("f")</span>
    </div>
    <div class="d-flex gap-2">
        <a href="/Admin/Orders/Invoice/@Model.Id" target="_blank" class="btn btn-outline-dark">
            <i class="fas fa-print me-2"></i> @Lang.Get("Print Invoice")
        </a>
        <a href="/Admin/Orders" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i> @Lang.Get("Back to List")
        </a>
    </div>
</div>

<div class="row">
    <!-- Order Items -->
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 mb-4 rounded-3 overflow-hidden">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-box-open me-2 text-primary"></i> @Lang.Get("Order Items")</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted">
                        <tr>
                            <th class="ps-4">@Lang.Get("Product Name")</th>
                            <th class="text-center">@Lang.Get("Quantity")</th>
                            <th class="text-center">@Lang.Get("Unit Price")</th>
                            <th class="text-end pe-4">@Lang.Get("Subtotal")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (item.Product != null)
                                        {
                                            <img src="@item.Product.ImageUrl" class="rounded border me-3 ms-0" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='/images/product.webp'">
                                            <div>
                                                <div class="fw-bold text-dark">@(isRtl? item.Product.NameAr : item.Product.NameEn)</div>
                                                <small class="text-muted d-block">@item.Product.ModelNumber</small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-danger">@Lang.Get("Unknown Product")</span>
                                        }
                                    </div>
                                </td>
                                <td class="text-center"><span class="badge bg-light text-dark border px-3">@item.Quantity</span></td>
                                <td class="text-center">@item.Price.ToString("N0")</td>
                                <td class="text-end pe-4 fw-bold text-dark">@((item.Price * item.Quantity).ToString("N0")) @Lang.Get("SAR")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <td colspan="3" class="text-end py-3 border-0"><strong>@Lang.Get("Subtotal (Excl. Tax)")</strong></td>
                            <td class="text-end pe-4 border-0">@((Model.TotalAmount / 1.15m).ToString("N2")) @Lang.Get("SAR")</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end border-0"><strong>@Lang.Get("VAT (15%)")</strong></td>
                            <td class="text-end border-0 pe-4">@((Model.TotalAmount - (Model.TotalAmount / 1.15m)).ToString("N2")) @Lang.Get("SAR")</td>
                        </tr>
                        <tr class="bg-white border-top">
                            <td colspan="3" class="text-end py-3"><h5 class="mb-0 fw-bold text-success">@Lang.Get("Total")</h5></td>
                            <td class="text-end pe-4 py-3"><h5 class="mb-0 fw-bold text-success">@Model.TotalAmount.ToString("N2") @Lang.Get("SAR")</h5></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Sidebar Info -->
    <div class="col-lg-4">
        <!-- Status & Actions -->
        <div class="card shadow-sm border-0 mb-4 rounded-3 border-top border-4 @(Model.Status == "مكتمل" ? "border-success" : "border-warning")">
            <div class="card-header bg-white py-3">
                <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-tasks me-2"></i> @Lang.Get("Update Status")</h6>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Orders" asp-action="UpdateStatus"  method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <label class="form-label small text-muted fw-bold">@Lang.Get("Current Status")</label>
                    <div class="input-group mb-3">
                        <select name="status" class="form-select bg-light fw-bold text-dark">
                            <!option value="جديد" @(Model.Status == "جديد" ? "selected" : "")>@Lang.Get("جديد")</!option>
                            <!option value="قيد التنفيذ" @(Model.Status == "قيد التنفيذ" ? "selected" : "")>@Lang.Get("قيد التنفيذ")</!option>
                            <!option value="تم الشحن" @(Model.Status == "تم الشحن" ? "selected" : "")>@Lang.Get("تم الشحن")</!option>
                            <!option value="مكتمل" @(Model.Status == "مكتمل" ? "selected" : "")>@Lang.Get("مكتمل")</!option>
                            <!option value="ملغي" @(Model.Status == "ملغي" ? "selected" : "")>@Lang.Get("ملغي")</!option>
                        </select>
                        <button type="submit" class="btn btn-primary">@Lang.Get("Save")</button>
                    </div>
                </form>

                <div class="alert @(Model.Status == "مكتمل" ? "alert-success" : "alert-warning") d-flex align-items-center mb-0 p-2">
                    <i class="fas @(Model.Status == "مكتمل" ? "fa-check-circle" : "fa-clock") me-2"></i>
                    <span>@Lang.Get("Status"): <strong>@Lang.Get(Model.Status)</strong></span>
                </div>
            </div>
        </div>

        <!-- Customer Info -->
        <div class="card shadow-sm border-0 mb-4 rounded-3">
            <div class="card-header bg-white py-3">
                <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-user-circle me-2 text-info"></i> @Lang.Get("Customer Info")</h6>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-4">
                    <div class="avatar-circle bg-soft-info text-info rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h6 class="mb-1 fw-bold">@Model.CustomerName</h6>
                        <span class="badge bg-light text-muted border">@Lang.Get("Customer")</span>
                    </div>
                </div>

                <div class="info-list">
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">@Lang.Get("Phone")</small>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-phone me-2 text-muted"></i>
                            <span class="fw-bold text-dark">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "-" : Model.PhoneNumber)</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">@Lang.Get("Address")</small>
                        <div class="d-flex align-items-start">
                            <i class="fas fa-map-marker-alt me-2 text-muted mt-1"></i>
                            <span class="fw-bold text-dark">@(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>