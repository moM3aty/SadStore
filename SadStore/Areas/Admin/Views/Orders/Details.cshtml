@model SadStore.Data.Order
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Order Details") + " #" + Model.Id;
    Layout = "_AdminLayout";
    var isRtl = Lang.IsRtl();
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-dark"><i class="fas fa-file-invoice me-2"></i> @Lang.Get("Order Items")</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>@Lang.Get("Products")</th>
                                <th class="text-center">@Lang.Get("Quantity")</th>
                                <th class="text-center">@Lang.Get("Unit Price")</th>
                                <th class="text-center">@Lang.Get("Subtotal")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (item.Product != null)
                                            {
                                                <img src="@item.Product.ImageUrl" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;" onerror="this.src='/images/product.webp'">
                                                <span>@(isRtl? item.Product.NameAr : item.Product.NameEn)</span>
                                            }
                                            else
                                            {
                                                <span>@Lang.Get("Unknown Product")</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-center">@item.Price.ToString("N2")</td>
                                    <td class="text-center">@((item.Price * item.Quantity).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light fw-bold">
                            <tr>
                                <td colspan="3" class="text-end">@Lang.Get("Total"):</td>
                                <td class="text-center text-success">@Model.TotalAmount.ToString("N2") @Lang.Get("SAR")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-dark">@Lang.Get("Customer Info")</h5>
            </div>
            <div class="card-body">
                <p><strong>@Lang.Get("Name"):</strong> @Model.CustomerName</p>
                <p><strong>@Lang.Get("Date"):</strong> @Model.OrderDate.ToString("yyyy/MM/dd")</p>
                <p><strong>@Lang.Get("Address"):</strong> @(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)</p>
                <p><strong>@Lang.Get("Phone"):</strong> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "-" : Model.PhoneNumber)</p>
                <div class="mt-3">
                    <a href="/Admin/Orders/Invoice/@Model.Id" target="_blank" class="btn btn-outline-dark w-100">
                        <i class="fas fa-print"></i> @Lang.Get("Print Invoice")
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-dark">@Lang.Get("Update Status")</h5>
            </div>
            <div class="card-body">
                <form action="/Admin/Orders/UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Current Status"):</label>
                        <select name="status" class="form-select">
                            <!option value="جديد" @(Model.Status == "جديد" ? "selected" : "")>@Lang.Get("جديد")</!option>
                            <!option value="قيد التنفيذ" @(Model.Status == "قيد التنفيذ" ? "selected" : "")>@Lang.Get("قيد التنفيذ")</!option>
                            <!option value="تم الشحن" @(Model.Status == "تم الشحن" ? "selected" : "")>@Lang.Get("تم الشحن")</!option>
                            <!option value="مكتمل" @(Model.Status == "مكتمل" ? "selected" : "")>@Lang.Get("مكتمل")</!option>
                            <!option value="ملغي" @(Model.Status == "ملغي" ? "selected" : "")>@Lang.Get("ملغي")</!option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-custom w-100">@Lang.Get("Update Status")</button>
                </form>
            </div>
        </div>
    </div>
</div>