@model SadStore.Data.Product

@{
    ViewData["Title"] = "تعديل المنتج";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">تعديل المنتج: @Model.NameAr</h5>
                <a href="/Admin/Products" class="btn btn-outline-secondary btn-sm">عودة للقائمة</a>
            </div>
            <div class="card-body">
                <form action="/Admin/Products/Edit/@Model.Id" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">اسم المنتج (عربي)</label>
                            <input type="text" asp-for="NameAr" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">اسم المنتج (إنجليزي)</label>
                            <input type="text" asp-for="NameEn" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">القسم</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">السعر</label>
                            <input type="number" asp-for="Price" class="form-control" step="0.01" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">الكمية في المخزون</label>
                            <input type="number" asp-for="StockQuantity" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">تغيير الصورة</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <div class="mt-2">
                                <small>الصورة الحالية:</small>
                                <img src="@Model.ImageUrl" style="width: 50px; height: 50px; object-fit: cover;" class="rounded border">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الوصف (عربي)</label>
                        <textarea asp-for="DescriptionAr" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الوصف (إنجليزي)</label>
                        <textarea asp-for="DescriptionEn" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" asp-for="IsFeatured">
                        <label class="form-check-label" asp-for="IsFeatured">
                            عرض في الصفحة الرئيسية (منتج مميز)
                        </label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-custom">حفظ التغييرات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>