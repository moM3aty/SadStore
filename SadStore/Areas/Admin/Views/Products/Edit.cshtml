@model SadStore.Data.Product
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Edit Product");
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0">@Lang.Get("Edit Product") <span class="text-muted fs-6">#@Model.Id</span></h4>
            <a href="/Admin/Products" class="btn btn-outline-secondary">@Lang.Get("Back to List")</a>
        </div>

        <form asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <!-- Basic Info Card -->
            <div class="card shadow-sm border-0 mb-4 rounded-3">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold text-primary"><i class="fas fa-info-circle me-2"></i> @Lang.Get("Basic Information")</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">@Lang.Get("Product Name (Ar)")</label>
                            <input type="text" asp-for="NameAr" class="form-control bg-light" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">@Lang.Get("Product Name (En)")</label>
                            <input type="text" asp-for="NameEn" class="form-control bg-light" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">@Lang.Get("Category")</label>
                            <select asp-for="CategoryId" class="form-select bg-light" asp-items="ViewBag.CategoryId"></select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">@Lang.Get("Model Number")</label>
                            <input type="text" asp-for="ModelNumber" class="form-control bg-light" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Lang.Get("Description (Ar)")</label>
                        <textarea asp-for="DescriptionAr" class="form-control bg-light" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Lang.Get("Description (En)")</label>
                        <textarea asp-for="DescriptionEn" class="form-control bg-light" rows="3"></textarea>
                    </div>
                </div>
            </div>

            <!-- Pricing & Stock Card -->
            <div class="card shadow-sm border-0 mb-4 rounded-3">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold text-success"><i class="fas fa-tag me-2"></i> @Lang.Get("Pricing & Stock")</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">@Lang.Get("Current Price")</label>
                            <div class="input-group">
                                <input type="number" asp-for="Price" class="form-control" step="0.01" required />
                                <span class="input-group-text">@Lang.Get("SAR")</span>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">@Lang.Get("Old Price")</label>
                            <div class="input-group">
                                <input type="number" asp-for="OldPrice" class="form-control" step="0.01" />
                                <span class="input-group-text">@Lang.Get("SAR")</span>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">@Lang.Get("Stock")</label>
                            <input type="number" asp-for="StockQuantity" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Lang.Get("Available Sizes")</label>
                        <input type="text" asp-for="AvailableSizes" class="form-control" placeholder="S,M,L,XL" />
                        <div class="form-text">@Lang.Get("Sizes Note")</div>
                    </div>
                    <div class="form-check form-switch mt-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsFeatured">
                        <label class="form-check-label fw-bold" asp-for="IsFeatured">@Lang.Get("Display on Home Page")</label>
                    </div>
                </div>
            </div>

            <!-- Images Management -->
            <div class="card shadow-sm border-0 mb-4 rounded-3">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold text-warning"><i class="fas fa-images me-2"></i> @Lang.Get("Product Images")</h6>
                </div>
                <div class="card-body p-4">

                    <!-- أ. الصورة الرئيسية -->
                    <div class="mb-4 border-bottom pb-4">
                        <label class="form-label fw-bold d-block">@Lang.Get("Main Image")</label>
                        <div class="d-flex align-items-start gap-4">
                            <div class="text-center">
                                <img src="@Model.ImageUrl" class="rounded border shadow-sm mb-2" style="width: 120px; height: 120px; object-fit: cover;" onerror="this.src='/images/product.webp'">
                                <div class="small text-muted">@Lang.Get("Current Image")</div>
                            </div>
                            <div class="flex-grow-1">
                                <label class="form-label text-primary">@Lang.Get("Change Main Image")</label>
                                <input type="file" name="mainImageFile" class="form-control" accept="image/*" />
                                <div class="form-text">سيتم استبدال الصورة الحالية بالجديدة.</div>
                            </div>
                        </div>
                    </div>

                    <!-- ب. صور المعرض (الإضافية) -->
                    <div>
                        <label class="form-label fw-bold">@Lang.Get("Additional Images") (Gallery)</label>

                        <!-- عرض الصور الموجودة -->
                        <div class="row g-3 mb-3">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                foreach (var img in Model.Images)
                                {
                                    <div class="col-6 col-md-3 col-lg-2">
                                        <div class="card h-100 position-relative shadow-sm border-0 group-hover">
                                            <img src="@img.Url" class="card-img-top rounded-top" style="height: 100px; object-fit: cover;">
                                            <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1"
                                                    style="padding: 2px 6px;"
                                                    onclick="deleteImage(@img.Id)" title="@Lang.Get("Delete")">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12"><p class="text-muted small">@Lang.Get("No additional images")</p></div>
                            }
                        </div>

                        <!-- رفع صور جديدة للمعرض -->
                        <label class="form-label text-success">@Lang.Get("Upload Additional Images")</label>
                        <input type="file" name="additionalImages" class="form-control" accept="image/*" multiple />
                        <div class="form-text">يمكنك رفع صور متعددة لإضافتها للمعرض دون حذف الصور السابقة.</div>
                    </div>
                </div>
            </div>

       

            <!-- Product Specifications (Full Details) -->
            <div class="card shadow-sm border-0 mb-4 rounded-3">
                <div class="card-header bg-white py-3" data-bs-toggle="collapse" href="#specsCollapse" role="button" aria-expanded="true">
                    <h6 class="mb-0 fw-bold text-info"><i class="fas fa-list me-2"></i> @Lang.Get("Product Specifications") <i class="fas fa-chevron-down float-end"></i></h6>
                </div>
                <div class="collapse show" id="specsCollapse">
                    <div class="card-body p-4">
                        <div class="row">
                            <!-- Design Type -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Design Type") (Ar)</label>
                                <input type="text" asp-for="DesignTypeAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Design Type") (En)</label>
                                <input type="text" asp-for="DesignTypeEn" class="form-control">
                            </div>

                            <!-- Cut Type -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Cut Type") (Ar)</label>
                                <input type="text" asp-for="CutTypeAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Cut Type") (En)</label>
                                <input type="text" asp-for="CutTypeEn" class="form-control">
                            </div>

                            <!-- Occasion -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Occasion") (Ar)</label>
                                <input type="text" asp-for="OccasionAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Occasion") (En)</label>
                                <input type="text" asp-for="OccasionEn" class="form-control">
                            </div>

                            <!-- Fit Type -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Fit Type") (Ar)</label>
                                <input type="text" asp-for="FitTypeAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Fit Type") (En)</label>
                                <input type="text" asp-for="FitTypeEn" class="form-control">
                            </div>

                            <!-- Lining -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Lining") (Ar)</label>
                                <input type="text" asp-for="LiningAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Lining") (En)</label>
                                <input type="text" asp-for="LiningEn" class="form-control">
                            </div>

                            <!-- Sleeves -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Sleeves") (Ar)</label>
                                <input type="text" asp-for="SleevesAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Sleeves") (En)</label>
                                <input type="text" asp-for="SleevesEn" class="form-control">
                            </div>

                            <!-- Stretch -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Stretch") (Ar)</label>
                                <input type="text" asp-for="StretchAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Stretch") (En)</label>
                                <input type="text" asp-for="StretchEn" class="form-control">
                            </div>

                            <!-- Material -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Material") (Ar)</label>
                                <input type="text" asp-for="MaterialAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Material") (En)</label>
                                <input type="text" asp-for="MaterialEn" class="form-control">
                            </div>

                            <!-- Care Instructions -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Care Instructions") (Ar)</label>
                                <input type="text" asp-for="CareInstructionsAr" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted">@Lang.Get("Care Instructions") (En)</label>
                                <input type="text" asp-for="CareInstructionsEn" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid mb-5">
                <button type="submit" class="btn btn-primary btn-lg shadow">@Lang.Get("Save Changes")</button>
            </div>
        </form>

        <form id="deleteImageForm" action="/Admin/Products/DeleteImage" method="post">
            <input type="hidden" name="id" id="deleteImageId" />
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function deleteImage(id) {
            if (confirm('@Lang.Get("Are you sure you want to delete")?')) {
                document.getElementById('deleteImageId').value = id;
                document.getElementById('deleteImageForm').submit();
            }
        }
    </script>
}