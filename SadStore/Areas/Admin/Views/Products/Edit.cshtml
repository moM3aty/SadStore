@model SadStore.Data.Product
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Edit Product");
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Lang.Get("Edit Product"): @Model.NameAr</h5>
                <a href="/Admin/Products" class="btn btn-outline-secondary btn-sm">@Lang.Get("Back to List")</a>
            </div>
            <div class="card-body">
                <form action="/Admin/Products/Edit/@Model.Id" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageUrl" />

                    <!-- البيانات الأساسية -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Product Name (Ar)")</label>
                            <input type="text" asp-for="NameAr" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Product Name (En)")</label>
                            <input type="text" asp-for="NameEn" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Category")</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Model Number")</label>
                            <input type="text" asp-for="ModelNumber" class="form-control" />
                        </div>
                    </div>

                    <!-- الأسعار -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-success">@Lang.Get("Current Price")</label>
                            <input type="number" asp-for="Price" class="form-control border-success" step="0.01" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">@Lang.Get("Old Price")</label>
                            <input type="number" asp-for="OldPrice" class="form-control" step="0.01" />
                        </div>
                    </div>

                    <!-- المخزون والمقاسات -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Stock")</label>
                            <input type="number" asp-for="StockQuantity" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Available Sizes")</label>
                            <input type="text" asp-for="AvailableSizes" class="form-control" placeholder="S,M,L,XL" />
                            <div class="form-text">@Lang.Get("Sizes Note")</div>
                        </div>
                    </div>

                    <!-- تفاصيل المنتج الإضافية (Product Specifications) -->
                    <h6 class="fw-bold mt-3 mb-3 border-bottom pb-2">@Lang.Get("Product Specifications")</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Design Type") (Ar)</label>
                            <input type="text" asp-for="DesignTypeAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Design Type") (En)</label>
                            <input type="text" asp-for="DesignTypeEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Cut Type") (Ar)</label>
                            <input type="text" asp-for="CutTypeAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Cut Type") (En)</label>
                            <input type="text" asp-for="CutTypeEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Occasion") (Ar)</label>
                            <input type="text" asp-for="OccasionAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Occasion") (En)</label>
                            <input type="text" asp-for="OccasionEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Fit Type") (Ar)</label>
                            <input type="text" asp-for="FitTypeAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Fit Type") (En)</label>
                            <input type="text" asp-for="FitTypeEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Lining") (Ar)</label>
                            <input type="text" asp-for="LiningAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Lining") (En)</label>
                            <input type="text" asp-for="LiningEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Sleeves") (Ar)</label>
                            <input type="text" asp-for="SleevesAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Sleeves") (En)</label>
                            <input type="text" asp-for="SleevesEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Stretch") (Ar)</label>
                            <input type="text" asp-for="StretchAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Stretch") (En)</label>
                            <input type="text" asp-for="StretchEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Material") (Ar)</label>
                            <input type="text" asp-for="MaterialAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Material") (En)</label>
                            <input type="text" asp-for="MaterialEn" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Care Instructions") (Ar)</label>
                            <input type="text" asp-for="CareInstructionsAr" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Lang.Get("Care Instructions") (En)</label>
                            <input type="text" asp-for="CareInstructionsEn" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Description (Ar)")</label>
                        <textarea asp-for="DescriptionAr" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Description (En)")</label>
                        <textarea asp-for="DescriptionEn" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" asp-for="IsFeatured">
                        <label class="form-check-label" asp-for="IsFeatured">
                            @Lang.Get("Display on Home Page")
                        </label>
                    </div>

                    <hr />

                    <!-- إدارة الصور -->
                    <div class="mb-4">
                        <h6 class="fw-bold">@Lang.Get("Product Images")</h6>

                        <div class="row g-3 mb-3">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                foreach (var img in Model.Images)
                                {
                                    <div class="col-6 col-md-3">
                                        <div class="card h-100 position-relative">
                                            <img src="@img.Url" class="card-img-top" style="height: 150px; object-fit: cover;">
                                            <div class="card-footer text-center p-1">
                                                <button type="button" class="btn btn-sm btn-danger w-100"
                                                        onclick="deleteImage(@img.Id)">
                                                    <i class="fas fa-trash"></i> @Lang.Get("Delete")
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted small">@Lang.Get("No additional images")</p>
                            }
                        </div>

                        <label class="form-label">@Lang.Get("Upload New Images")</label>
                        <input type="file" name="imageFiles" class="form-control" accept="image/*" multiple />
                        <div class="form-text">@Lang.Get("You can select multiple images")</div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-custom">@Lang.Get("Save Changes")</button>
                    </div>
                </form>

                <form id="deleteImageForm" action="/Admin/Products/DeleteImage" method="post">
                    <input type="hidden" name="id" id="deleteImageId" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteImage(id) {
            if (confirm('@Lang.Get("Are you sure you want to delete")?')) {
                document.getElementById('deleteImageId').value = id;
                document.getElementById('deleteImageForm').submit();
            }
        }
    </script>
}