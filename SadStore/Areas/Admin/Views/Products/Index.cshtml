@model IEnumerable<SadStore.Data.Product>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Products");
    Layout = "_AdminLayout";
    var isRtl = Lang.IsRtl();
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<div class="row mb-3">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form method="get" action="/Admin/Products" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">@Lang.Get("Search")</label>
                        <input type="text" name="search" class="form-control" value="@ViewBag.Search" placeholder="@Lang.Get("Product Name")">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">@Lang.Get("Category")</label>
                        <select name="categoryId" class="form-select" asp-items="ViewBag.CategoryId">
                            <option value="">@Lang.Get("All Categories")</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter"></i> @Lang.Get("Filter")
                        </button>
                    </div>
                    <div class="col-md-2">
                        <a href="/Admin/Products/Export" class="btn btn-success w-100">
                            <i class="fas fa-file-csv"></i> @Lang.Get("Export to Excel")
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="table-header">
                <h5 class="mb-0">@Lang.Get("Product List")</h5>
                <a href="/Admin/Products/Create" class="btn btn-custom">
                    <i class="fas fa-plus"></i> @Lang.Get("Add New Product")
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th>@Lang.Get("Image")</th>
                                <th>@Lang.Get("Product Name")</th>
                                <th>@Lang.Get("Category")</th>
                                <th>@Lang.Get("Price")</th>
                                <th>@Lang.Get("Stock")</th>
                                <th>@Lang.Get("Featured")</th>
                                <th>@Lang.Get("Actions")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageUrl" alt="@(isRtl? item.NameAr: item.NameEn)" class="rounded" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='/images/product.webp'">
                                    </td>
                                    <td>
                                        <div class="fw-bold">@(isRtl? item.NameAr: item.NameEn)</div>
                                    </td>
                                    <td>
                                        @(item.Category != null ? (isRtl ? item.Category.NameAr : item.Category.NameEn) : Lang.Get("Uncategorized"))
                                    </td>
                                    <td>@item.Price.ToString("N2") @Lang.Get("SAR")</td>
                                    <td>
                                        @if (item.StockQuantity > 0)
                                        {
                                            <span class="badge bg-success">@item.StockQuantity</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@Lang.Get("Sold Out")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <i class="fas fa-check-circle text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times-circle text-muted"></i>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/Admin/Products/Edit/@item.Id" class="btn btn-sm btn-outline-primary" title="@Lang.Get("Edit")"><i class="fas fa-edit"></i></a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id" title="@Lang.Get("Delete")">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">@Lang.Get("Confirm Delete")</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @Lang.Get("Are you sure you want to delete") "@(isRtl? item.NameAr: item.NameEn)"?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form action="/Admin/Products/Delete/@item.Id" method="post">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                            <button type="submit" class="btn btn-danger">@Lang.Get("Delete")</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="p-3 d-flex justify-content-center">
                        <nav>
                            <ul class="pagination">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="/Admin/Products?page=@(currentPage - 1)&search=@ViewBag.Search&categoryId=@ViewBag.CurrentCategoryId">@Lang.Get("Previous")</a>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">@Lang.Get("Page") @currentPage @Lang.Get("Of") @totalPages</span>
                                </li>
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link" href="/Admin/Products?page=@(currentPage + 1)&search=@ViewBag.Search&categoryId=@ViewBag.CurrentCategoryId">@Lang.Get("Next")</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>