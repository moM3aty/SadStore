@model IEnumerable<SadStore.Data.Product>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Products");
    Layout = "_AdminLayout";
    var isRtl = Lang.IsRtl();
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0 text-dark">@Lang.Get("Product List")</h4>
    <a href="/Admin/Products/Create" class="btn btn-custom shadow-sm">
        <i class="fas fa-plus"></i> @Lang.Get("Add New Product")
    </a>
</div>

<!-- Filters & Actions -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get" action="/Admin/Products" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label text-muted small">@Lang.Get("Search")</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="search" class="form-control border-start-0" value="@ViewBag.Search" placeholder="@Lang.Get("Product Name")...">
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">@Lang.Get("Category")</label>
                <select name="categoryId" class="form-select" asp-items="ViewBag.CategoryId">
                    <option value="">@Lang.Get("All Categories")</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-1"></i> @Lang.Get("Filter")
                </button>
            </div>
            <div class="col-md-2">
                <a href="/Admin/Products/Export" class="btn btn-success w-100 text-white">
                    <i class="fas fa-file-csv me-1"></i> @Lang.Get("Export to Excel")
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Products Table -->
<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="ps-4">@Lang.Get("Image")</th>
                        <th>@Lang.Get("Product Name")</th>
                        <th>@Lang.Get("Model Number")</th>
                        <th>@Lang.Get("Category")</th>
                        <th>@Lang.Get("Price")</th>
                        <th>@Lang.Get("Stock")</th>
                        <th class="text-center">@Lang.Get("Featured")</th>
                        <th class="text-end pe-4" style="min-width: 120px;">@Lang.Get("Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <img src="@item.ImageUrl" alt="Img" class="rounded border" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='/images/product.webp'">
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@(isRtl? item.NameAr: item.NameEn)</div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">@item.ModelNumber</span>
                                </td>
                                <td>
                                    @(item.Category != null ? (isRtl ? item.Category.NameAr : item.Category.NameEn) : Lang.Get("Uncategorized"))
                                </td>
                                <td class="fw-bold text-success">@item.Price.ToString("N0") <small>@Lang.Get("SAR")</small></td>
                                <td>
                                    @if (item.StockQuantity > 0)
                                    {
                                        <span class="badge bg-soft-success text-success">@item.StockQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-danger text-danger">@Lang.Get("Sold Out")</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.IsFeatured)
                                    {
                                        <i class="fas fa-check-circle text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-circle text-muted opacity-25" style="font-size: 0.5rem;"></i>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a href="/Admin/Products/Edit/@item.Id" class="btn btn-sm btn-outline-primary" title="@Lang.Get("Edit")">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id" title="@Lang.Get("Delete")">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header border-0 pb-0">
                                                    <h5 class="modal-title text-danger">@Lang.Get("Confirm Delete")</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-center py-4">
                                                    <i class="fas fa-exclamation-circle fa-3x text-warning mb-3"></i>
                                                    <p>@Lang.Get("Are you sure you want to delete") <br> <strong>"@(isRtl? item.NameAr: item.NameEn)"</strong>?</p>
                                                </div>
                                                <div class="modal-footer border-0 pt-0 justify-content-center">
                                                    <form asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                        <button type="submit" class="btn btn-danger px-4">@Lang.Get("Delete")</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="fas fa-box-open fa-3x mb-3 opacity-50"></i>
                                <p>@Lang.Get("No products found matching your search.")</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <div class="p-3 border-top bg-light d-flex justify-content-center">
                <nav>
                    <ul class="pagination mb-0 shadow-sm">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="/Admin/Products?page=@(currentPage - 1)&search=@ViewBag.Search&categoryId=@ViewBag.CurrentCategoryId">
                                <i class="fas @(isRtl ? "fa-chevron-right" : "fa-chevron-left")"></i>
                            </a>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link fw-bold text-dark">@Lang.Get("Page") @currentPage @Lang.Get("Of") @totalPages</span>
                        </li>
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="/Admin/Products?page=@(currentPage + 1)&search=@ViewBag.Search&categoryId=@ViewBag.CurrentCategoryId">
                                <i class="fas @(isRtl ? "fa-chevron-left" : "fa-chevron-right")"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>