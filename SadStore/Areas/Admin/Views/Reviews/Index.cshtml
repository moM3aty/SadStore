@model IEnumerable<SadStore.Data.CustomerReview>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Reviews");
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0 text-dark">@Lang.Get("Reviews")</h4>
    <a href="/Admin/Reviews/Export" class="btn btn-success text-white">
        <i class="fas fa-file-csv me-1"></i> @Lang.Get("Export to Excel")
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="ps-4">@Lang.Get("Customer")</th>
                        <th>@Lang.Get("Rating")</th>
                        <th style="width: 40%;">@Lang.Get("Description")</th>
                        <th>@Lang.Get("Status")</th>
                        <th class="text-end pe-4">@Lang.Get("Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.CustomerName</td>
                                <td>
                                    <div class="text-warning">
                                        @for (int i = 0; i < item.Rating; i++)
                                        {
                                            <i class="fas fa-star small"></i>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <p class="text-muted mb-0 small text-truncate" style="max-width: 300px;">@item.ReviewText</p>
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge bg-soft-success text-success">@Lang.Get("Published")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-warning text-warning">@Lang.Get("Pending")</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <form action="/Admin/Reviews/ToggleStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            @if (item.IsApproved)
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Hide"><i class="fas fa-eye-slash"></i></button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Approve"><i class="fas fa-check"></i></button>
                                            }
                                        </form>

                                        <button type="button" class="btn btn-sm btn-outline-danger ms-1" data-bs-toggle="modal" data-bs-target="#deleteReviewModal-@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <div class="modal fade" id="deleteReviewModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header border-0 pb-0">
                                                    <h5 class="modal-title text-danger">@Lang.Get("Confirm Delete")</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-center py-4">
                                                    <p>@Lang.Get("Are you sure you want to delete")?</p>
                                                </div>
                                                <div class="modal-footer border-0 pt-0 justify-content-center">
                                                    <form action="/Admin/Reviews/Delete" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                        <button type="submit" class="btn btn-danger px-4">@Lang.Get("Delete")</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">@Lang.Get("No reviews yet for this product.")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>  