@model IEnumerable<SadStore.Data.CustomerReview>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Reviews");
    Layout = "_AdminLayout";
}

<div class="row mb-3">
    <div class="col-12 text-end">
        <a href="/Admin/Reviews/Export" class="btn btn-success">
            <i class="fas fa-file-csv"></i> @Lang.Get("Export to Excel")
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-card shadow-sm">
            <div class="table-header">
                <h5 class="mb-0">@Lang.Get("Reviews")</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>@Lang.Get("Customer")</th>
                            <th>@Lang.Get("Rating")</th>
                            <th>@Lang.Get("Description")</th>
                            <th>@Lang.Get("Status")</th>
                            <th>@Lang.Get("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.CustomerName</td>
                                <td>
                                    @for (int i = 0; i < item.Rating; i++)
                                    {
                                        <i class="fas fa-star text-warning small"></i>
                                    }
                                </td>
                                <td>
                                    <p class="text-muted mb-0 small" style="max-width: 300px;">@item.ReviewText</p>
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge bg-success">@Lang.Get("Published")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">@Lang.Get("Pending")</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <form action="/Admin/Reviews/ToggleStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            @if (item.IsApproved)
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Hide"><i class="fas fa-eye-slash"></i></button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Approve"><i class="fas fa-check"></i></button>
                                            }
                                        </form>

                                        <button type="button" class="btn btn-sm btn-outline-danger ms-1" data-bs-toggle="modal" data-bs-target="#deleteReviewModal-@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <div class="modal fade" id="deleteReviewModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">@Lang.Get("Confirm Delete")</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    @Lang.Get("Are you sure you want to delete")?
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/Admin/Reviews/Delete" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                        <button type="submit" class="btn btn-danger">@Lang.Get("Delete")</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>