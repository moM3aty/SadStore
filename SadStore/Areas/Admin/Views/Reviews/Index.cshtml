@model IEnumerable<SadStore.Data.CustomerReview>

@{
    ViewData["Title"] = "آراء العملاء";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="table-header">
                <h5 class="mb-0">تقييمات العملاء</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>العميل</th>
                            <th>التقييم</th>
                            <th>التعليق</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.CustomerName</td>
                                <td>
                                    @for (int i = 0; i < item.Rating; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                </td>
                                <td>
                                    <p class="text-muted mb-0" style="max-width: 300px;">@item.ReviewText</p>
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge bg-success">منشور</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">قيد المراجعة</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <form action="/Admin/Reviews/ToggleStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            @if (item.IsApproved)
                                            {
                                                <button type="submit" class="btn btn-sm btn-warning" title="إخفاء"><i class="fas fa-eye-slash"></i></button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-success" title="نشر"><i class="fas fa-check"></i></button>
                                            }
                                        </form>

                                        <button type="button" class="btn btn-sm btn-outline-danger ms-1" data-bs-toggle="modal" data-bs-target="#deleteReviewModal-@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteReviewModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">حذف التقييم</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    هل أنت متأكد من حذف تقييم العميل "@item.CustomerName"؟
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/Admin/Reviews/Delete" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                        <button type="submit" class="btn btn-danger">حذف</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>