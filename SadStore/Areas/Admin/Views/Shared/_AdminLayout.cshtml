@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject SadStore.Services.LanguageService Lang

@{
    var isRtl = Lang.IsRtl();
    var dir = isRtl ? "rtl" : "ltr";
    var lang = isRtl ? "ar" : "en";
}

<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Lang.Get("Saad Panel")</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="icon" type="image/x-icon" href="~/images/logo.png">

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
    <style>
        :root {
            --admin-primary: #1e1e2d;
            --admin-secondary: #2b2b40;
            --admin-accent: #c89f72;
            --text-light: #a2a3b7;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f5f8fa;
            overflow-x: hidden;
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: var(--admin-primary);
            color: #fff;
            transition: all 0.3s;
            min-height: 100vh;
        }

            #sidebar .sidebar-header {
                padding: 20px;
                background: var(--admin-secondary);
                border-bottom: 1px solid #36364d;
            }

            #sidebar ul.components {
                padding: 20px 0;
            }

            #sidebar ul li {
                padding: 0;
                border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            }

                #sidebar ul li a {
                    padding: 15px 20px;
                    font-size: 1.1em;
                    display: block;
                    color: var(--text-light);
                    text-decoration: none;
                    transition: 0.3s;
                }

                    #sidebar ul li a:hover, #sidebar ul li a.active {
                        color: #fff;
                        background: var(--admin-secondary);
                        border-right: 4px solid var(--admin-accent);
                    }

        html[dir="ltr"] #sidebar ul li a:hover, html[dir="ltr"] #sidebar ul li a.active {
            border-right: none;
            border-left: 4px solid var(--admin-accent);
        }

        #sidebar ul li a i {
            margin-left: 10px;
            width: 20px;
            text-align: center;
        }

        html[dir="ltr"] #sidebar ul li a i {
            margin-left: 0;
            margin-right: 10px;
        }

        #content {
            width: 100%;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .admin-navbar {
            background: #fff;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 25px;
        }

        .stat-card {
            background: #fff;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 0 15px rgba(0,0,0,0.02);
            border-bottom: 3px solid transparent;
            transition: transform 0.3s;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

            .stat-card.primary {
                border-bottom-color: #007bff;
            }

            .stat-card.success {
                border-bottom-color: #28a745;
            }

            .stat-card.warning {
                border-bottom-color: #ffc107;
            }

            .stat-card.danger {
                border-bottom-color: #dc3545;
            }

        .stat-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            opacity: 0.2;
            float: left;
        }

        html[dir="ltr"] .stat-icon {
            float: right;
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--admin-primary);
        }

        .stat-label {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .table-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.02);
            overflow: hidden;
        }

        .table-header {
            padding: 20px;
            border-bottom: 1px solid #f1f1f1;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-custom {
            background-color: var(--admin-accent);
            color: #fff;
            border: none;
        }

            .btn-custom:hover {
                background-color: #a67c52;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-crown"></i> @Lang.Get("Saad Panel")</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/Admin/Dashboard" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i> @Lang.Get("Dashboard")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Products" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")">
                        <i class="fas fa-box-open"></i> @Lang.Get("Products")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Categories">
                        <i class="fas fa-tags"></i> @Lang.Get("Categories")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Orders">
                        <i class="fas fa-shopping-cart"></i> @Lang.Get("Orders")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Users">
                        <i class="fas fa-users"></i> @Lang.Get("Users")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Reviews">
                        <i class="fas fa-star"></i> @Lang.Get("Reviews")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Shipping">
                        <i class="fas fa-truck"></i> @Lang.Get("Shipping")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Blogs">
                        <i class="fas fa-blog"></i> @Lang.Get("Blog")
                    </a>
                </li>
                <li>
                    <a href="/Admin/Settings" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")">
                        <i class="fas fa-cogs"></i> @Lang.Get("Settings")
                    </a>
                </li>
                <li>
                    <a href="/">
                        <i class="fas fa-globe"></i> @Lang.Get("View Site")
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <nav class="navbar navbar-expand-lg admin-navbar">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-light">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center">
                        <!-- Language Switcher -->
                        <div class="dropdown mx-2">
                            <button class="btn btn-light dropdown-toggle" type="button" id="langDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-globe"></i> @(isRtl ? "العربية" : "English")
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <form id="langFormEnAdmin" asp-controller="Home" asp-action="SetLanguage" asp-area="" asp-route-returnUrl="@Context.Request.Path" method="post">
                                        <input type="hidden" name="culture" value="en" />
                                        <a class="dropdown-item" href="#" onclick="document.getElementById('langFormEnAdmin').submit();">English</a>
                                    </form>
                                </li>
                                <li>
                                    <form id="langFormArAdmin" asp-controller="Home" asp-action="SetLanguage" asp-area="" asp-route-returnUrl="@Context.Request.Path" method="post">
                                        <input type="hidden" name="culture" value="ar" />
                                        <a class="dropdown-item" href="#" onclick="document.getElementById('langFormArAdmin').submit();">العربية</a>
                                    </form>
                                </li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <form action="/Auth/Logout" method="get">
                                        <button type="submit" class="dropdown-item text-danger">@Lang.Get("Logout")</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid">
                <partial name="_Alerts" />
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarCollapse').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('active');
            const sidebar = document.getElementById('sidebar');
            const isRtl = document.documentElement.dir === 'rtl';

            if(isRtl) {
                 if (sidebar.style.marginRight === '-250px') {
                    sidebar.style.marginRight = '0';
                } else {
                    sidebar.style.marginRight = '-250px';
                }
            } else {
                if (sidebar.style.marginLeft === '-250px') {
                    sidebar.style.marginLeft = '0';
                } else {
                    sidebar.style.marginLeft = '-250px';
                }
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>