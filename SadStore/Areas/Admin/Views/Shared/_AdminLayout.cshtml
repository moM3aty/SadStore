<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - لوحة التحكم - صاد</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
    <style>
        :root {
            --admin-primary: #1e1e2d;
            --admin-secondary: #2b2b40;
            --admin-accent: #c89f72;
            --text-light: #a2a3b7;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f5f8fa;
            overflow-x: hidden;
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: var(--admin-primary);
            color: #fff;
            transition: all 0.3s;
            min-height: 100vh;
        }

            #sidebar .sidebar-header {
                padding: 20px;
                background: var(--admin-secondary);
                border-bottom: 1px solid #36364d;
            }

            #sidebar ul.components {
                padding: 20px 0;
            }

            #sidebar ul li {
                padding: 0;
                border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            }

                #sidebar ul li a {
                    padding: 15px 20px;
                    font-size: 1.1em;
                    display: block;
                    color: var(--text-light);
                    text-decoration: none;
                    transition: 0.3s;
                }

                    #sidebar ul li a:hover, #sidebar ul li a.active {
                        color: #fff;
                        background: var(--admin-secondary);
                        border-right: 4px solid var(--admin-accent);
                    }

                    #sidebar ul li a i {
                        margin-left: 10px;
                        width: 20px;
                        text-align: center;
                    }

        #content {
            width: 100%;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .admin-navbar {
            background: #fff;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 25px;
        }

        .stat-card {
            background: #fff;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 0 15px rgba(0,0,0,0.02);
            border-bottom: 3px solid transparent;
            transition: transform 0.3s;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

            .stat-card.primary {
                border-bottom-color: #007bff;
            }

            .stat-card.success {
                border-bottom-color: #28a745;
            }

            .stat-card.warning {
                border-bottom-color: #ffc107;
            }

            .stat-card.danger {
                border-bottom-color: #dc3545;
            }

        .stat-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            opacity: 0.2;
            float: left;
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--admin-primary);
        }

        .stat-label {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .table-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.02);
            overflow: hidden;
        }

        .table-header {
            padding: 20px;
            border-bottom: 1px solid #f1f1f1;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-custom {
            background-color: var(--admin-accent);
            color: #fff;
            border: none;
        }

            .btn-custom:hover {
                background-color: #a67c52;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-crown"></i> لوحة صاد</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/Admin/Dashboard" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i> الرئيسية
                    </a>
                </li>
                <li>
                    <a href="/Admin/Products" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")">
                        <i class="fas fa-box-open"></i> المنتجات
                    </a>
                </li>
                <li>
                    <a href="/Admin/Categories">
                        <i class="fas fa-tags"></i> الأقسام
                    </a>
                </li>
                <li>
                    <a href="/Admin/Orders">
                        <i class="fas fa-shopping-cart"></i> الطلبات
                    </a>
                </li>
                <li>
                    <a href="/Admin/Users">
                        <i class="fas fa-users"></i> المستخدمين
                    </a>
                </li>
                <li>
                    <a href="/Admin/Reviews">
                        <i class="fas fa-star"></i> آراء العملاء
                    </a>
                </li>
                <li>
                    <a href="/Admin/Shipping">
                        <i class="fas fa-truck"></i> أماكن الشحن
                    </a>
                </li>
                <li>
                    <a href="/Admin/Blogs">
                        <i class="fas fa-blog"></i> المدونة
                    </a>
                </li>
                <li>
                    <a href="/">
                        <i class="fas fa-globe"></i> عرض الموقع
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <nav class="navbar navbar-expand-lg admin-navbar">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-light">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg"></i> الأدمن
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <form action="/Auth/Logout" method="get">
                                        <button type="submit" class="dropdown-item text-danger">تسجيل الخروج</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarCollapse').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('active');
            if (document.getElementById('sidebar').style.marginLeft === '-250px') {
                document.getElementById('sidebar').style.marginLeft = '0';
            } else {
                document.getElementById('sidebar').style.marginLeft = '-250px';
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>