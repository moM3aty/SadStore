@model List<SadStore.Data.Order>
@{
    ViewData["Title"] = "الرئيسية";
    Layout = "_AdminLayout";
}

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card primary">
            <i class="fas fa-shopping-bag stat-icon text-primary"></i>
            <div class="stat-value">@ViewBag.TotalOrders</div>
            <div class="stat-label">إجمالي الطلبات</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card success">
            <i class="fas fa-money-bill-wave stat-icon text-success"></i>
            <div class="stat-value">@ViewBag.TotalRevenue ر.س</div>
            <div class="stat-label">إجمالي المبيعات</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card warning">
            <i class="fas fa-box stat-icon text-warning"></i>
            <div class="stat-value">@ViewBag.TotalProducts</div>
            <div class="stat-label">عدد المنتجات</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card danger">
            <i class="fas fa-bell stat-icon text-danger"></i>
            <div class="stat-value">@ViewBag.NewOrders</div>
            <div class="stat-label">طلبات جديدة</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="table-header">
                <h5 class="mb-0">آخر الطلبات المستلمة</h5>
                <a href="/Admin/Orders" class="btn btn-sm btn-custom">عرض الكل</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>رقم الطلب</th>
                            <th>العميل</th>
                            <th>التاريخ</th>
                            <th>المبلغ</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.Id</td>
                                <td>@item.CustomerName</td>
                                <td>@item.OrderDate.ToString("yyyy/MM/dd")</td>
                                <td>@item.TotalAmount.ToString("N2") ر.س</td>
                                <td>
                                    <span class="badge bg-soft-primary text-primary">@item.Status</span>
                                </td>
                                <td>
                                    <a href="/Admin/Orders/Details/@item.Id" class="btn btn-sm btn-light"><i class="fas fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>