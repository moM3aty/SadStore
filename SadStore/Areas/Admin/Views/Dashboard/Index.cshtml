@model List<SadStore.Data.Order>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Dashboard");
    Layout = "_AdminLayout";
    var isRtl = Lang.IsRtl();

    // تصحيح الخطأ: تحويل البيانات من dynamic إلى أنواع صريحة قبل السيريالايز
    var rawStatusLabels = ViewBag.StatusLabels as List<string> ?? new List<string>();
    var translatedStatusLabels = rawStatusLabels.Select(s => Lang.Get(s)).ToList();
    var statusLabelsJson = System.Text.Json.JsonSerializer.Serialize(translatedStatusLabels);

    var statusCounts = ViewBag.StatusCounts as List<int> ?? new List<int>();
    var statusCountsJson = System.Text.Json.JsonSerializer.Serialize(statusCounts);

    var salesLabels = ViewBag.SalesLabels as List<string> ?? new List<string>();
    var salesLabelsJson = System.Text.Json.JsonSerializer.Serialize(salesLabels);

    var salesData = ViewBag.SalesData as List<decimal> ?? new List<decimal>();
    var salesDataJson = System.Text.Json.JsonSerializer.Serialize(salesData);
}

<!-- مكتبة Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- بطاقات الإحصائيات -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card primary h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-value">@ViewBag.TotalOrders</div>
                    <div class="stat-label">@Lang.Get("Total Orders")</div>
                </div>
                <i class="fas fa-shopping-bag fa-2x text-primary opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card success h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <!-- تنسيق الرقم بشكل صحيح -->
                    @{
                        decimal revenue = 0;
                        if (ViewBag.TotalRevenue != null) { revenue = (decimal)ViewBag.TotalRevenue; }
                    }
                    <div class="stat-value">@revenue.ToString("N0") @Lang.Get("SAR")</div>
                    <div class="stat-label">@Lang.Get("Total Revenue")</div>
                </div>
                <i class="fas fa-money-bill-wave fa-2x text-success opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card warning h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-value">@ViewBag.TotalProducts</div>
                    <div class="stat-label">@Lang.Get("Total Products")</div>
                </div>
                <i class="fas fa-box fa-2x text-warning opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card danger h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-value">@ViewBag.NewOrders</div>
                    <div class="stat-label">@Lang.Get("New Orders")</div>
                </div>
                <i class="fas fa-bell fa-2x text-danger opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<!-- الرسوم البيانية -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-chart-line me-2"></i> @Lang.Get("Monthly Sales")</h5>
            </div>
            <div class="card-body">
                <canvas id="salesChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-chart-pie me-2"></i> @Lang.Get("Orders by Status")</h5>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <canvas id="statusChart" style="max-height: 250px;"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- جدول أحدث الطلبات -->
<div class="row">
    <div class="col-12">
        <div class="table-card shadow-sm">
            <div class="table-header">
                <h5 class="mb-0 fw-bold">@Lang.Get("Recent Orders")</h5>
                <a href="/Admin/Orders" class="btn btn-sm btn-custom">@Lang.Get("View All")</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>@Lang.Get("Order Number")</th>
                            <th>@Lang.Get("Customer")</th>
                            <th>@Lang.Get("Date")</th>
                            <th>@Lang.Get("Amount")</th>
                            <th>@Lang.Get("Status")</th>
                            <th>@Lang.Get("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="fw-bold">#@item.Id</span></td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.OrderDate.ToString("yyyy/MM/dd")</td>
                                    <td>@item.TotalAmount.ToString("N2") @Lang.Get("SAR")</td>
                                    <td>
                                        @if (item.Status == "جديد")
                                        {
                                            <span class="badge bg-primary">@Lang.Get(item.Status)</span>
                                        }
                                        else if (item.Status == "مكتمل")
                                        {

                                            <span class="badge bg-success">@Lang.Get(item.Status)</span>
                                        }
                                        else if (item.Status == "ملغي")
                                        {

                                            <span class="badge bg-danger">@Lang.Get(item.Status)</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-secondary">@Lang.Get(item.Status)</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Orders/Details/@item.Id" class="btn btn-sm btn-light border"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">@Lang.Get("No previous orders found")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Line Chart for Sales
        const ctxSales = document.getElementById('salesChart').getContext('2d');

        // استخدام البيانات المجهزة من السيرفر
        const salesLabels = @Html.Raw(salesLabelsJson);
        const salesData = @Html.Raw(salesDataJson);

        new Chart(ctxSales, {
            type: 'line',
            data: {
                labels: salesLabels,
                datasets: [{
                    label: '@Lang.Get("Total Revenue")',
                    data: salesData,
                    borderColor: '#c89f72',
                    backgroundColor: 'rgba(200, 159, 114, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value + '        SAR';
                            }
                        }
                    }
                }
            }
        });

        // Doughnut Chart for Status
        const ctxStatus = document.getElementById('statusChart').getContext('2d');
        const statusLabels = @Html.Raw(statusLabelsJson);
        const statusCounts = @Html.Raw(statusCountsJson);

        new Chart(ctxStatus, {
            type: 'doughnut',
            data: {
                labels: statusLabels,
                datasets: [{
                    data: statusCounts,
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                 plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    });
</script>