@model SadStore.Data.BlogPost

@{
    ViewData["Title"] = "تعديل المقال";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">تعديل المقال: @Model.Title</h5>
                <a href="/Admin/Blogs" class="btn btn-outline-secondary btn-sm">عودة للقائمة</a>
            </div>
            <div class="card-body">
                <form action="/Admin/Blogs/Edit/@Model.Id" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">عنوان المقال</label>
                        <input type="text" asp-for="Title" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">تغيير الصورة</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                        <div class="mt-2">
                            <small>الصورة الحالية:</small>
                            <img src="@Model.ImageUrl" style="width: 100px; height: 60px; object-fit: cover;" class="rounded border">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">محتوى المقال</label>
                        <textarea asp-for="Content" class="form-control" rows="12" required></textarea>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-custom">حفظ التعديلات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>