@model IEnumerable<SadStore.Data.BlogPost>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Blog");
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="table-header">
                <h5 class="mb-0">@Lang.Get("Blog Posts")</h5>
                <a href="/Admin/Blogs/Create" class="btn btn-custom">
                    <i class="fas fa-plus"></i> @Lang.Get("Add New Post")
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>@Lang.Get("Image")</th>
                            <th>@Lang.Get("Title")</th>
                            <th>@Lang.Get("Published Date")</th>
                            <th>@Lang.Get("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImageUrl" class="rounded" style="width: 60px; height: 40px; object-fit: cover;" onerror="this.src='/images/blog-default.jpg'">
                                </td>
                                <td class="fw-bold">@item.Title</td>
                                <td>@item.PublishedDate.ToString("yyyy/MM/dd")</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/Admin/Blogs/Edit/@item.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i> @Lang.Get("Edit")</a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteBlogModal-@item.Id">
                                            <i class="fas fa-trash"></i> @Lang.Get("Delete")
                                        </button>
                                    </div>

                                    <div class="modal fade" id="deleteBlogModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">@Lang.Get("Confirm Delete")</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    @Lang.Get("Are you sure you want to delete") "@item.Title"?
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/Admin/Blogs/Delete" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                        <button type="submit" class="btn btn-danger">@Lang.Get("Delete")</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>