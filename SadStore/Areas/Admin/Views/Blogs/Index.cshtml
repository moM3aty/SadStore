@model IEnumerable<SadStore.Data.BlogPost>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Blog");
    Layout = "_AdminLayout";
    var isRtl = Lang.IsRtl();
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1 text-dark">@Lang.Get("Blog Posts")</h4>
        <p class="text-muted small mb-0">@Lang.Get("Manage blog content and news")</p>
    </div>
    <a asp-area="Admin" asp-controller="Blogs" asp-action="Create" class="btn btn-primary shadow-sm px-4">
        <i class="fas fa-plus me-2"></i> @Lang.Get("Add New Post")
    </a>
</div>

<!-- Search Filter -->
<div class="card shadow-sm border-0 mb-4 rounded-3">
    <div class="card-body p-4">
        <form asp-area="Admin" asp-controller="Blogs" asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-8">
                <label class="form-label fw-bold small text-muted">@Lang.Get("Search")</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="search" class="form-control border-start-0 bg-light" value="@ViewBag.Search" placeholder="@Lang.Get("Title")...">
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="fas fa-filter me-1"></i> @Lang.Get("Filter")
                </button>
            </div>
            <div class="col-md-2">
                <a asp-area="Admin" asp-controller="Blogs" asp-action="Export" class="btn btn-success w-100 text-white">
                    <i class="fas fa-file-excel me-1"></i> @Lang.Get("Export")
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-3 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-muted">
                <tr>
                    <th class="py-3 ps-4">@Lang.Get("Image")</th>
                    <th class="py-3">@Lang.Get("Title")</th>
                    <th class="py-3">@Lang.Get("Published Date")</th>
                    <th class="py-3 text-end pe-4">@Lang.Get("Actions")</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <img src="@item.ImageUrl" class="rounded-3 border shadow-sm" style="width: 60px; height: 40px; object-fit: cover;" onerror="this.src='/images/blog-default.jpg'">
                            </td>
                            <td class="fw-bold text-dark">@(isRtl? item.TitleAr: item.TitleEn)</td>
                            <td class="text-muted"><i class="far fa-calendar-alt me-1"></i> @item.PublishedDate.ToString("yyyy/MM/dd")</td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm" role="group">
                                    <a asp-area="Admin" asp-controller="Blogs" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="@Lang.Get("Edit")">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteBlogModal-@item.Id" title="@Lang.Get("Delete")">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteBlogModal-@item.Id" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content border-0">
                                            <div class="modal-header border-bottom-0 pb-0">
                                                <h5 class="modal-title text-danger">@Lang.Get("Confirm Delete")</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body text-center py-4">
                                                <div class="mb-3 text-warning display-4"><i class="fas fa-exclamation-circle"></i></div>
                                                <p class="mb-0">@Lang.Get("Are you sure you want to delete")</p>
                                                <h5 class="fw-bold mt-2">"@(isRtl? item.TitleAr: item.TitleEn)"</h5>
                                            </div>
                                            <div class="modal-footer border-top-0 pt-0 justify-content-center pb-4">
                                                <form asp-area="Admin" asp-controller="Blogs" asp-action="Delete" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                    <button type="submit" class="btn btn-danger px-4">@Lang.Get("Delete")</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="fas fa-newspaper fa-3x mb-3 opacity-25"></i>
                            <p>@Lang.Get("No posts found")</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="p-3 border-top bg-light d-flex justify-content-center">
            <nav>
                <ul class="pagination mb-0 shadow-sm">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-search="@ViewBag.Search">
                            <i class="fas @(isRtl ? "fa-chevron-right" : "fa-chevron-left")"></i>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link fw-bold text-dark">@Lang.Get("Page") @currentPage @Lang.Get("Of") @totalPages</span>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-search="@ViewBag.Search">
                            <i class="fas @(isRtl ? "fa-chevron-left" : "fa-chevron-right")"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>