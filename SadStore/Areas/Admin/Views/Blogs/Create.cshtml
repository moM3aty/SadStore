@model SadStore.Data.BlogPost
@inject SadStore.Services.LanguageService Lang

@{
    ViewData["Title"] = Lang.Get("Add New Post");
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Lang.Get("Add New Post")</h5>
                <a href="/Admin/Blogs" class="btn btn-outline-secondary btn-sm">@Lang.Get("Back to List")</a>
            </div>
            <div class="card-body">
                <form action="/Admin/Blogs/Create" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Title")</label>
                        <input type="text" name="Title" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Product Image")</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@Lang.Get("Content")</label>
                        <textarea name="Content" class="form-control" rows="12" required></textarea>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-custom">@Lang.Get("Publish Post")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>