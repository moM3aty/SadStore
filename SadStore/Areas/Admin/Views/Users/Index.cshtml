@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Users");
    Layout = "_AdminLayout";
    var isRtl = Lang.IsRtl();
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1 text-dark">@Lang.Get("Users")</h4>
        <p class="text-muted small mb-0">@Lang.Get("Manage registered users")</p>
    </div>
    <div class="badge bg-dark fs-6 px-3 py-2 shadow-sm rounded-pill">
        @Lang.Get("Total"): @ViewBag.TotalCount
    </div>
</div>

<!-- Filters -->
<div class="card shadow-sm border-0 mb-4 rounded-3">
    <div class="card-body p-4">
        <form asp-area="Admin" asp-controller="Users" asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-8">
                <label class="form-label fw-bold small text-muted">@Lang.Get("Search")</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="search" class="form-control border-start-0 bg-light" value="@ViewBag.Search" placeholder="@Lang.Get("Name"), @Lang.Get("Email")...">
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-1"></i> @Lang.Get("Filter")
                </button>
            </div>
            <div class="col-md-2">
                <a asp-area="Admin" asp-controller="Users" asp-action="Export" class="btn btn-success w-100 text-white">
                    <i class="fas fa-file-excel me-1"></i> @Lang.Get("Export")
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card shadow-sm border-0 rounded-3 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-muted">
                <tr>
                    <th class="py-3 ps-4">@Lang.Get("User Info")</th>
                    <th class="py-3">@Lang.Get("Phone")</th>
                    <th class="py-3">@Lang.Get("ID")</th>
                    <th class="py-3 text-end pe-4">@Lang.Get("Actions")</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 bg-soft-primary text-primary d-flex align-items-center justify-content-center rounded-circle" style="width: 40px; height: 40px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@user.UserName</div>
                                        <small class="text-muted">@user.Email</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                {
                                    <span class="text-dark"><i class="fas fa-phone me-1 text-muted small"></i> @user.PhoneNumber</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td><small class="text-muted font-monospace">@user.Id.Substring(0, 8)...</small></td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm">
                                    <a href="/Admin/Users/Edit/@user.Id" class="btn btn-sm btn-outline-primary" title="@Lang.Get("Edit")">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteUserModal-@user.Id" title="@Lang.Get("Delete")">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteUserModal-@user.Id" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content border-0">
                                            <div class="modal-header border-bottom-0 pb-0">
                                                <h5 class="modal-title text-danger">@Lang.Get("Confirm Delete")</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body text-center py-4">
                                                <div class="mb-3 text-warning display-4"><i class="fas fa-user-times"></i></div>
                                                <p class="mb-0">@Lang.Get("Are you sure you want to delete")</p>
                                                <h5 class="fw-bold mt-2">"@user.Email"</h5>
                                            </div>
                                            <div class="modal-footer border-top-0 pt-0 justify-content-center pb-4">
                                                <form asp-area="Admin" asp-controller="Users" asp-action="Delete" method="post">
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                    <button type="submit" class="btn btn-danger px-4">@Lang.Get("Delete")</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="fas fa-users fa-3x mb-3 opacity-25"></i>
                            <p>@Lang.Get("No users found")</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <div class="p-3 border-top bg-light d-flex justify-content-center">
            <nav>
                <ul class="pagination mb-0 shadow-sm">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-search="@ViewBag.Search">
                            <i class="fas @(isRtl ? "fa-chevron-right" : "fa-chevron-left")"></i>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link fw-bold text-dark">@Lang.Get("Page") @currentPage @Lang.Get("Of") @totalPages</span>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-search="@ViewBag.Search">
                            <i class="fas @(isRtl ? "fa-chevron-left" : "fa-chevron-right")"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>