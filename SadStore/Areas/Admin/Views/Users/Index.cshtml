@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@inject SadStore.Services.LanguageService Lang
@{
    ViewData["Title"] = Lang.Get("Users");
    Layout = "_AdminLayout";
}

<div class="row mb-3">
    <div class="col-12 text-end">
        <a href="/Admin/Users/Export" class="btn btn-success">
            <i class="fas fa-file-csv"></i> @Lang.Get("Export to Excel")
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-card shadow-sm">
            <div class="table-header">
                <h5 class="mb-0">@Lang.Get("Users")</h5>
                <span class="badge bg-secondary">@Model.Count()</span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>@Lang.Get("Email") / @Lang.Get("Name")</th>
                            <th>@Lang.Get("Phone")</th>
                            <th>@Lang.Get("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2 bg-light text-primary d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; border-radius: 50%;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@user.UserName</div>
                                            <div class="text-muted small">@user.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@(string.IsNullOrEmpty(user.PhoneNumber) ? "-" : user.PhoneNumber)</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteUserModal-@user.Id">
                                        <i class="fas fa-trash"></i> @Lang.Get("Delete")
                                    </button>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteUserModal-@user.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">@Lang.Get("Confirm Delete")</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    @Lang.Get("Are you sure you want to delete") "@user.Email"?
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/Admin/Users/Delete" method="post">
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Lang.Get("Cancel")</button>
                                                        <button type="submit" class="btn btn-danger">@Lang.Get("Delete")</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>